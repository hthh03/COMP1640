@model WebApplication2.Models.Post

@{
    ViewData["Title"] = "Xóa bài viết";
}

<div class="container mt-4">
    <h2>Xóa bài viết</h2>
    <h3 class="text-danger">Bạn có chắc chắn muốn xóa bài viết này?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Tiêu đề</dt>
            <dd class="col-sm-10">@Model.Title</dd>

            <dt class="col-sm-2">Ngày tạo</dt>
            <dd class="col-sm-10">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>

            @if (Model.UpdatedAt.HasValue)
            {
                <dt class="col-sm-2">Cập nhật lúc</dt>
                <dd class="col-sm-10">@Model.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm")</dd>
            }
        </dl>

        <div class="alert alert-warning">
            <strong>Chú ý:</strong> Tất cả bình luận trong bài viết này sẽ bị xóa.
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="PostId" />
            <input type="submit" value="Xóa" class="btn btn-danger" />
            <a asp-action="Details" asp-route-id="@Model.PostId" class="btn btn-secondary">Quay lại</a>
        </form>
    </div>
</div>
@model WebApplication2.ViewModels.PostViewModel

@{
    ViewData["Title"] = "Chỉnh sửa bài viết";
}

<div class="container mt-4">
    <h2>Chỉnh sửa bài viết</h2>
    <hr />
    <div class="row">
        <div class="col-md-10">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="PostId" />
                <input type="hidden" asp-for="BlogId" />
                <div class="form-group">
                    <label asp-for="Title" class="control-label">Tiêu đề bài viết</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Content" class="control-label">Nội dung</label>
                    <textarea asp-for="Content" id="editor" class="form-control" rows="12"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Lưu thay đổi" class="btn btn-primary" />
                    <a asp-action="Details" asp-route-id="@Model.PostId" class="btn btn-secondary">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.ckeditor.com/ckeditor5/35.0.1/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#editor'))
            .catch(error => {
                console.error(error);
            });
    </script>
}
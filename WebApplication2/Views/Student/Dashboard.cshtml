@{
    ViewData["Title"] = "Student Dashboard";
    Layout = "_Layout";
}

<style>
    /* Dashboard Styles */
    :root {
        --primary-color: #F79421;
        --secondary-color: #4A4A4A;
        --light-bg: #F5F8FB;
        --white: #FFFFFF;
        --light-gray: #E8EEF4;
        --text-dark: #1D1D1D;
        --text-light: #777777;
        --border-radius: 10px;
        --shadow: 0 4px 12px rgba(0, 0, 0, 0.05);
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
        background-color: var(--light-bg);
    }

    .dashboard-container {
        display: flex;
        min-height: 100vh;
    }

    /* Sidebar Styles */
    .sidebar {
        width: 220px;
        background-color: var(--white);
        display: flex;
        flex-direction: column;
        padding: 20px 0;
        box-shadow: 2px 0 10px rgba(0, 0, 0, 0.05);
        position: fixed;
        height: 100%;
    }

    .logo-section {
        padding: 0 20px 30px;
    }

    .logo {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .logo-icon {
        width: 40px;
        height: 40px;
        background-color: var(--primary-color);
        border-radius: 8px;
    }

    .logo-text {
        font-weight: 700;
        font-size: 18px;
        color: var(--text-dark);
    }

    .small-text {
        font-size: 10px;
        color: var(--text-light);
        letter-spacing: 1px;
    }

    .nav-menu {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        gap: 5px;
    }

    .nav-item {
        padding: 10px 20px;
        display: flex;
        align-items: center;
        gap: 12px;
        color: var(--text-light);
        text-decoration: none;
        font-size: 15px;
        transition: all 0.3s ease;
    }

        .nav-item.active, .nav-item:hover {
            background-color: rgba(247, 148, 33, 0.1);
            color: var(--primary-color);
            border-left: 3px solid var(--primary-color);
        }

        .nav-item i {
            width: 20px;
        }

    .logout-section {
        padding: 15px 20px;
        border-top: 1px solid var(--light-gray);
        margin-top: 20px;
    }

    .logout-btn {
        color: var(--text-light);
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 15px;
    }

    /* Main Content Styles */
    .main-content {
        flex: 1;
        margin-left: 220px;
        padding: 20px 30px;
    }

    /* Header Section */
    .header-section {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
    }

    .greeting {
        color: var(--text-light);
        margin: 0;
        font-size: 15px;
    }

    .welcome-title {
        margin: 5px 0 0;
        font-size: 24px;
        font-weight: 700;
        color: var(--text-dark);
    }

    .search-box {
        background-color: var(--white);
        border-radius: 30px;
        padding: 8px 15px;
        display: flex;
        align-items: center;
        width: 250px;
        box-shadow: var(--shadow);
    }

        .search-box input {
            border: none;
            padding: 5px 10px;
            width: 100%;
            outline: none;
            font-size: 14px;
        }

        .search-box i {
            color: var(--text-light);
        }

    /* Stats Cards */
    .stats-cards {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
        margin-bottom: 25px;
    }

    .stat-card {
        background-color: var(--white);
        border-radius: var(--border-radius);
        padding: 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        box-shadow: var(--shadow);
    }

    .message-card {
        background-color: var(--primary-color);
        color: var(--white);
    }

    .stat-label {
        font-size: 14px;
        color: var(--text-light);
        margin-bottom: 8px;
    }

    .message-card .stat-label {
        color: rgba(255, 255, 255, 0.8);
    }

    .stat-value {
        font-size: 18px;
        font-weight: 600;
        color: var(--text-dark);
    }

    .message-card .stat-value {
        color: var(--white);
    }

    .stat-icon {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #FBF3E8;
        color: var(--primary-color);
    }

    .activities-icon {
        background-color: #E8F2FC;
        color: #3F8CFF;
    }

    .message-arrow {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: rgba(255, 255, 255, 0.2);
        color: var(--white);
    }

    /* Dashboard Body */
    .dashboard-body {
        display: grid;
        grid-template-columns: 3fr 2fr;
        gap: 25px;
    }

    /* Course Banner */
    .course-banner {
        background-color: var(--white);
        border-radius: var(--border-radius);
        padding: 30px;
        margin-bottom: 25px;
        box-shadow: var(--shadow);
    }

    .course-title {
        font-size: 22px;
        font-weight: 700;
        color: var(--text-dark);
        margin: 0 0 10px;
    }

    .course-subtitle {
        color: var(--text-light);
        margin-bottom: 20px;
    }

    .course-actions {
        display: flex;
        align-items: center;
        gap: 20px;
    }

    .join-btn {
        background-color: var(--primary-color);
        color: var(--white);
        border: none;
        border-radius: 30px;
        padding: 10px 25px;
        font-weight: 600;
        text-decoration: none;
    }

    .skip-link {
        color: var(--text-light);
        text-decoration: none;
    }

    /* My Courses Section */
    .my-courses-section {
        background-color: var(--white);
        border-radius: var(--border-radius);
        padding: 25px;
        box-shadow: var(--shadow);
    }

    .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

        .section-header h3 {
            font-size: 18px;
            margin: 0;
            color: var(--text-dark);
        }

    .course-filters {
        display: flex;
        gap: 15px;
    }

    .filter {
        font-size: 14px;
        color: var(--text-light);
        cursor: pointer;
    }

        .filter.active {
            color: var(--text-dark);
            font-weight: 600;
        }

    .courses-list {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .course-item {
        display: flex;
        align-items: center;
        gap: 15px;
        padding: 10px 0;
        border-bottom: 1px solid var(--light-gray);
    }

    .course-icon {
        width: 40px;
        height: 40px;
        background-color: #FBF3E8;
        color: var(--primary-color);
        border-radius: var(--border-radius);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .course-details h4 {
        margin: 0;
        font-size: 15px;
        color: var(--text-dark);
    }

    .course-details p {
        margin: 5px 0 0;
        font-size: 12px;
        color: var(--text-light);
    }

    .course-progress {
        flex-grow: 1;
    }

    .progress-bar {
        height: 6px;
        background-color: var(--light-gray);
        border-radius: 10px;
        overflow: hidden;
    }

    .progress {
        height: 100%;
        background-color: var(--primary-color);
    }

    .course-rating {
        display: flex;
        align-items: center;
        gap: 5px;
        color: #FFB800;
        font-size: 14px;
    }

    .view-course-btn {
        background-color: transparent;
        border: 1px solid var(--primary-color);
        color: var(--primary-color);
        border-radius: 20px;
        padding: 5px 15px;
        font-size: 13px;
        text-decoration: none;
        white-space: nowrap;
    }

    .view-all-link {
        margin-top: 20px;
        text-align: right;
    }

        .view-all-link a {
            color: var(--primary-color);
            text-decoration: none;
            font-size: 14px;
            display: inline-flex;
            align-items: center;
            gap: 5px;
        }

    /* Upcoming Tasks Section */
    .upcoming-tasks {
        background-color: var(--white);
        border-radius: var(--border-radius);
        padding: 25px;
        margin-bottom: 25px;
        box-shadow: var(--shadow);
    }

        .upcoming-tasks h3 {
            font-size: 18px;
            margin: 0 0 20px;
            color: var(--text-dark);
        }

    .task-list {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .task-item {
        display: flex;
        align-items: flex-start;
        gap: 10px;
    }

    .task-indicator {
        width: 6px;
        height: 35px;
        border-radius: 3px;
    }

    .task-info h4 {
        margin: 0;
        font-size: 15px;
        color: var(--text-dark);
    }

    .task-info p {
        margin: 5px 0 0;
        font-size: 12px;
        color: var(--text-light);
    }

    .view-all-tasks {
        margin-top: 20px;
        text-align: right;
    }

        .view-all-tasks a {
            color: var(--primary-color);
            text-decoration: none;
            font-size: 14px;
            display: inline-flex;
            align-items: center;
            gap: 5px;
        }

    /* Transactions Section */
    .transactions-section {
        background-color: var(--white);
        border-radius: var(--border-radius);
        padding: 25px;
        box-shadow: var(--shadow);
    }

        .transactions-section h3 {
            font-size: 18px;
            margin: 0;
            color: var(--text-dark);
        }

    .recent-label {
        font-size: 14px;
        color: var(--text-light);
        margin: 10px 0;
    }

    .transaction-list {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .transaction-item {
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .transaction-icon {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--white);
        font-size: 14px;
    }

    .transaction-info {
        flex-grow: 1;
    }

        .transaction-info h4 {
            margin: 0;
            font-size: 15px;
            color: var(--text-dark);
        }

        .transaction-info p {
            margin: 5px 0 0;
            font-size: 12px;
            color: var(--text-light);
        }

    .transaction-amount {
        font-weight: 600;
        color: var(--text-dark);
    }
</style>


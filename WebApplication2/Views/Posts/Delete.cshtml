@model WebApplication2.Models.Post

@{
    ViewData["Title"] = "Xóa bài viết";
}

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<!-- SweetAlert2 CDN -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<style>
    /* Main color variables */
    :root {
        --primary-orange: #FF7F24;
        --secondary-orange: #FFA07A;
        --light-orange: #FFE4C4;
        --dark-orange: #D2691E;
        --text-dark: #333333;
        --text-light: #ffffff;
        --light-gray: #f5f5f5;
        --danger: #e74c3c;
        --danger-dark: #c0392b;
        --success: #27ae60;
        --warning-bg: #fff3e0;
        --gradient-bg: linear-gradient(135deg, var(--light-orange) 0%, #ffffff 100%);
    }

    body {
        background-color: var(--light-gray);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
        overflow-x: hidden;
    }

    .delete-container {
        max-width: 900px;
        margin: 2rem auto;
        background-color: #ffffff;
        border-radius: 16px;
        box-shadow: 0 15px 35px rgba(210, 105, 30, 0.18);
        padding: 2rem;
        position: relative;
        overflow: hidden;
        border-top: 5px solid var(--danger);
    }

    .delete-header {
        text-align: center;
        margin-bottom: 2rem;
        position: relative;
    }

    .page-title {
        color: var(--dark-orange);
        font-size: clamp(1.6rem, 4vw, 2.1rem);
        font-weight: 700;
        margin-bottom: 0.75rem;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .page-title i {
            margin-right: 15px;
            color: var(--danger);
            animation: pulse 2s infinite;
        }

    @@keyframes pulse {
        0%

    {
        transform: scale(1);
    }

    50% {
        transform: scale(1.1);
    }

    100% {
        transform: scale(1);
    }

    }

    .page-subtitle {
        color: var(--text-dark);
        font-size: clamp(1rem, 3vw, 1.3rem);
        font-weight: 500;
        margin-bottom: 0.5rem;
    }

    .warning-box {
        background-color: var(--warning-bg);
        border-left: 5px solid var(--danger);
        padding: 1rem;
        margin: 1.5rem 0;
        border-radius: 10px;
        box-shadow: 0 6px 16px rgba(231, 76, 60, 0.1);
        display: flex;
        align-items: center;
        position: relative;
    }

        .warning-box i {
            color: var(--danger);
            font-size: 2rem;
            margin-right: 1rem;
            animation: shake 5s infinite;
        }

    @@keyframes shake {
        0%, 100%

    {
        transform: rotate(0deg);
    }

    1%, 5% {
        transform: rotate(-5deg);
    }

    3%, 7% {
        transform: rotate(5deg);
    }

    9% {
        transform: rotate(0deg);
    }

    }

    .warning-box p {
        color: var(--text-dark);
        margin: 0;
        font-size: 1rem;
        line-height: 1.5;
    }

    .post-details {
        background-color: #ffffff;
        border-radius: 12px;
        padding: 1.5rem;
        margin-top: 1.5rem;
        box-shadow: 0 8px 20px rgba(0,0,0,0.06);
        border: 1px solid #f0f0f0;
    }

    .post-title {
        color: var(--dark-orange);
        font-size: clamp(1.2rem, 3vw, 1.5rem);
        font-weight: 600;
        margin-bottom: 1rem;
        padding-bottom: 0.75rem;
        border-bottom: 2px solid var(--light-orange);
        display: flex;
        align-items: center;
        position: relative;
    }

        .post-title i {
            margin-right: 0.75rem;
            color: var(--primary-orange);
            font-size: 1.2rem;
        }

    .details-list {
        margin: 0;
        padding: 0;
    }

    .detail-item {
        display: grid;
        grid-template-columns: 1fr 2fr;
        gap: 1rem;
        margin-bottom: 1rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid #f0f0f0;
        align-items: start;
        transition: all 0.3s ease;
    }

        .detail-item:hover {
            background-color: rgba(255, 228, 196, 0.1);
            padding-left: 0.5rem;
            border-radius: 8px;
        }

        .detail-item:last-child {
            border-bottom: none;
            margin-bottom: 0;
            padding-bottom: 0;
        }

    .detail-label {
        font-weight: 600;
        color: var(--text-dark);
        display: flex;
        align-items: center;
    }

        .detail-label i {
            margin-right: 0.75rem;
            color: var(--primary-orange);
            width: 20px;
            text-align: center;
            font-size: 1.1rem;
        }

    .detail-value {
        color: #555;
        line-height: 1.6;
    }

    .content-preview {
        background: var(--gradient-bg);
        padding: 1rem;
        border-radius: 10px;
        font-style: italic;
        margin-top: 0.5rem;
        max-height: 120px;
        overflow-y: auto;
        border: 1px solid #eee;
        box-shadow: inset 0 2px 8px rgba(0,0,0,0.04);
        color: #444;
    }

    .divider {
        height: 2px;
        background: linear-gradient(to right, transparent, var(--light-orange), transparent);
        margin: 2rem 0;
        position: relative;
    }

        .divider::before {
            content: '\f057';
            font-family: 'Font Awesome 6 Free';
            font-weight: 900;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: white;
            padding: 0 1rem;
            color: var(--danger);
            font-size: 1.2rem;
        }

    .actions-container {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
        flex-wrap: wrap;
        justify-content: center;
    }

    .btn {
        padding: 12px 25px;
        border-radius: 50px;
        font-weight: 600;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border: none;
        box-shadow: 0 8px 15px rgba(0,0,0,0.1);
        font-size: 1rem;
        min-width: 150px;
        cursor: pointer;
    }

        .btn i {
            margin-right: 0.75rem;
            font-size: 1.1rem;
        }

    .btn-danger {
        background: linear-gradient(to right, var(--danger), var(--danger-dark));
        color: var(--text-light);
    }

        .btn-danger:hover {
            background: linear-gradient(to right, var(--danger-dark), var(--danger));
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(231, 76, 60, 0.3);
        }

    .btn-secondary {
        background-color: var(--light-gray);
        color: var(--text-dark);
        border: 1px solid #e0e0e0;
    }

        .btn-secondary:hover {
            background-color: #e6e6e6;
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }

    .status-indicator {
        position: absolute;
        top: 1rem;
        right: 1rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background-color: rgba(231, 76, 60, 0.1);
        border-radius: 20px;
        font-size: 0.9rem;
        color: var(--danger);
        font-weight: 500;
    }

        .status-indicator i {
            animation: blink 1.5s infinite;
        }

    @@keyframes blink {
        0%, 100%

    {
        opacity: 1;
    }

    50% {
        opacity: 0.4;
    }

    }

    .content-preview::-webkit-scrollbar {
        width: 6px;
    }

    .content-preview::-webkit-scrollbar-track {
        background: #f1f1f1;
        border-radius: 10px;
    }

    .content-preview::-webkit-scrollbar-thumb {
        background: var(--secondary-orange);
        border-radius: 10px;
    }

        .content-preview::-webkit-scrollbar-thumb:hover {
            background: var(--primary-orange);
        }

    .floating-action {
        display: none;
        position: fixed;
        bottom: 20px;
        right: 20px;
        z-index: 99;
    }

    /* Responsive Design */
    @@media (max-width: 1024px) {
        .delete-container

    {
        max-width: 90%;
        padding: 1.5rem;
    }

    }

    @@media (max-width: 768px) {
        .delete-container

    {
        margin: 1.5rem 15px;
        padding: 1.5rem;
    }

    .warning-box {
        padding: 0.75rem;
    }

        .warning-box i {
            font-size: 1.8rem;
            margin-right: 0.75rem;
        }

    .detail-item {
        grid-template-columns: 1fr;
        gap: 0.5rem;
    }

    .detail-label {
        margin-bottom: 0.5rem;
    }

    .detail-value {
        padding-left: 1.75rem;
    }

    }

    @@media (max-width: 576px) {
        .delete-container

    {
        margin: 1rem 10px;
        padding: 1rem;
        border-radius: 12px;
    }

    .warning-box {
        flex-direction: column;
        text-align: center;
    }

        .warning-box i {
            margin-right: 0;
            margin-bottom: 0.75rem;
            font-size: 1.6rem;
        }

        .warning-box p {
            font-size: 0.95rem;
        }

    .post-details {
        padding: 1rem;
    }

    .actions-container {
        flex-direction: column;
        gap: 0.75rem;
    }

    .btn {
        width: 100%;
        padding: 10px 20px;
    }

    .floating-action {
        display: block;
    }

    .status-indicator {
        font-size: 0.85rem;
        padding: 0.4rem 0.8rem;
    }

    }

    @@media (max-width: 320px) {
        .delete-container

    {
        margin: 0.75rem 5px;
        padding: 0.75rem;
    }

    .warning-box p {
        font-size: 0.85rem;
    }

    .post-title {
        font-size: 1.2rem;
    }

    .detail-label, .detail-value {
        font-size: 0.9rem;
    }

    .content-preview {
        max-height: 100px;
        padding: 0.75rem;
    }

    .status-indicator {
        font-size: 0.8rem;
        padding: 0.3rem 0.6rem;
    }

    }
</style>

<div class="delete-container">
    <div class="status-indicator">
        <i class="fas fa-exclamation-circle"></i>
        <span>Delete Mode</span>
    </div>

    <div class="delete-header">
        <h1 class="page-title">
            <i class="fas fa-trash-alt"></i>
            Delete Post
        </h1>
        <h3 class="page-subtitle">Are you sure you want to delete this post?</h3>
    </div>

    <div class="warning-box">
        <i class="fas fa-exclamation-triangle"></i>
        <div>
            <p><strong>Warning:</strong> This action <strong>cannot be undone</strong>. All post information will be permanently deleted from the system.</p>
            <p style="margin-top: 8px; font-size: 0.95rem;">If you only want to hide the post, consider updating its status instead of deleting it.</p>
        </div>
    </div>

    <div class="post-details">
        <h2 class="post-title">
            <i class="fas fa-file-alt"></i>
            Post Information
        </h2>

        <div class="details-list">
            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-heading"></i>
                    @Html.DisplayNameFor(model => model.Title)
                </div>
                <div class="detail-value">
                    <strong>@Html.DisplayFor(model => model.Title)</strong>
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-align-left"></i>
                    @Html.DisplayNameFor(model => model.Content)
                </div>
                <div class="detail-value">
                    <div class="content-preview">
                        @Html.DisplayFor(model => model.Content)
                    </div>
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-calendar-plus"></i>
                    @Html.DisplayNameFor(model => model.CreatedAt)
                </div>
                <div class="detail-value">
                    <i class="far fa-clock" style="color: var(--secondary-orange); margin-right: 5px;"></i>
                    @Html.DisplayFor(model => model.CreatedAt)
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-calendar-check"></i>
                    @Html.DisplayNameFor(model => model.UpdatedAt)
                </div>
                <div class="detail-value">
                    <i class="far fa-clock" style="color: var(--secondary-orange); margin-right: 5px;"></i>
                    @Html.DisplayFor(model => model.UpdatedAt)
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-folder-open"></i>
                    @Html.DisplayNameFor(model => model.Blog)
                </div>
                <div class="detail-value">
                    <i class="fas fa-bookmark" style="color: var(--secondary-orange); margin-right: 5px;"></i>
                    @Html.DisplayFor(model => model.Blog.Description)
                </div>
            </div>
        </div>
    </div>

    <div class="divider"></div>

    <form asp-action="Delete" id="deleteForm">
        <input type="hidden" asp-for="PostId" />
        <div class="actions-container">
            <button type="button" class="btn btn-danger" onclick="confirmDelete()">
                <i class="fas fa-trash-alt"></i> Confirm Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Go Back
            </a>
        </div>
    </form>

    <div class="floating-action">
        <button type="button" class="btn btn-danger" style="width: auto; padding: 12px 15px; border-radius: 50%;" onclick="confirmDelete()">
            <i class="fas fa-trash-alt" style="margin: 0;"></i>
        </button>
    </div>
</div>

<script>
    function confirmDelete() {
        Swal.fire({
            title: '<i class="fas fa-exclamation-triangle" style="color: #e74c3c;"></i> Confirm Delete',
            html: '<p>This post will be <strong>permanently</strong> deleted and cannot be recovered!</p>' +
                  '<p>Are you sure you want to continue?</p>',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#e74c3c',
            cancelButtonColor: '#6c757d',
            confirmButtonText: '<i class="fas fa-trash-alt"></i> Delete Permanently',
            cancelButtonText: '<i class="fas fa-times"></i> Cancel',
            reverseButtons: true,
            background: '#fff',
            iconColor: '#e74c3c',
            customClass: {
                title: 'swal-title',
                confirmButton: 'swal-confirm-button',
                cancelButton: 'swal-cancel-button'
            },
            backdrop: `rgba(255, 127, 36, 0.1)`,
            showClass: { popup: 'animate__animated animate__fadeIn' },
            hideClass: { popup: 'animate__animated animate__fadeOut' }
        }).then((result) => {
            if (result.isConfirmed) {
                Swal.fire({
                    title: 'Deleting...',
                    html: 'Please wait a moment',
                    timer: 1000,
                    timerProgressBar: true,
                    didOpen: () => {
                        Swal.showLoading();
                    }
                }).then(() => {
                    document.getElementById('deleteForm').submit();
                });
            }
        });
    }
</script>
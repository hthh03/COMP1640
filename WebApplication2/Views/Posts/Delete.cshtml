@model WebApplication2.Models.Post

@{
    ViewData["Title"] = "Xóa bài viết";
}

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<!-- SweetAlert2 CDN -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<style>
    /* Main color variables */
    :root {
        --primary-orange: #FF7F24;
        --secondary-orange: #FFA07A;
        --light-orange: #FFE4C4;
        --dark-orange: #D2691E;
        --text-dark: #333333;
        --text-light: #ffffff;
        --light-gray: #f5f5f5;
        --danger: #e74c3c;
        --danger-dark: #c0392b;
        --success: #27ae60;
        --success-dark: #2ecc71;
        --warning-bg: #ffeaa7;
    }

    body {
        background-color: var(--light-gray);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
    }

    .delete-container {
        max-width: 800px;
        margin: 30px auto;
        background-color: #ffffff;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(210, 105, 30, 0.15);
        padding: 25px;
        position: relative;
        overflow: hidden;
    }

    .delete-header {
        text-align: center;
        margin-bottom: 30px;
        position: relative;
    }

    .page-title {
        color: var(--dark-orange);
        font-size: 2.2rem;
        font-weight: 700;
        margin-bottom: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .page-title i {
            margin-right: 12px;
            color: var(--danger);
            animation: pulse 2s infinite;
        }

    @@keyframes pulse {
        0%

    {
        transform: scale(1);
    }

    50% {
        transform: scale(1.1);
    }

    100% {
        transform: scale(1);
    }

    }

    .page-subtitle {
        color: var(--text-dark);
        font-size: 1.4rem;
        font-weight: 600;
        margin-bottom: 5px;
        text-align: center;
    }

    .warning-box {
        background-color: var(--warning-bg);
        border-left: 5px solid var(--danger);
        padding: 15px;
        margin: 20px 0;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.05);
        display: flex;
        align-items: center;
    }

        .warning-box i {
            color: var(--danger);
            font-size: 2rem;
            margin-right: 15px;
        }

        .warning-box p {
            color: var(--text-dark);
            margin: 0;
            font-size: 1.05rem;
        }

    .post-details {
        background-color: #ffffff;
        border-radius: 12px;
        padding: 20px;
        margin-top: 20px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        border: 1px solid #eee;
    }

    .post-title {
        color: var(--dark-orange);
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 15px;
        padding-bottom: 10px;
        border-bottom: 2px solid var(--light-orange);
        display: flex;
        align-items: center;
    }

        .post-title i {
            margin-right: 10px;
            color: var(--primary-orange);
        }

    .details-list {
        margin: 0;
        padding: 0;
    }

    .detail-item {
        display: flex;
        margin-bottom: 15px;
        padding-bottom: 15px;
        border-bottom: 1px solid #eee;
        align-items: flex-start;
    }

        .detail-item:last-child {
            border-bottom: none;
            margin-bottom: 0;
            padding-bottom: 0;
        }

    .detail-label {
        flex: 0 0 25%;
        font-weight: 600;
        color: var(--text-dark);
        display: flex;
        align-items: center;
    }

        .detail-label i {
            margin-right: 8px;
            color: var(--primary-orange);
            width: 20px;
            text-align: center;
        }

    .detail-value {
        flex: 1;
        color: #555;
    }

    .content-preview {
        background-color: var(--light-gray);
        padding: 15px;
        border-radius: 8px;
        font-style: italic;
        margin-top: 5px;
        max-height: 150px;
        overflow-y: auto;
        border: 1px solid #ddd;
    }

    .actions-container {
        display: flex;
        gap: 15px;
        margin-top: 30px;
        flex-wrap: wrap;
        justify-content: center;
    }

    .btn {
        padding: 12px 24px;
        border-radius: 30px;
        cursor: pointer;
        font-weight: 600;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border: none;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        font-size: 1rem;
        min-width: 140px;
    }

        .btn i {
            margin-right: 10px;
        }

    .btn-danger {
        background-color: var(--danger);
        color: var(--text-light);
    }

        .btn-danger:hover {
            background-color: var(--danger-dark);
            transform: translateY(-3px);
            box-shadow: 0 6px 15px rgba(231, 76, 60, 0.3);
        }

    .btn-secondary {
        background-color: var(--light-gray);
        color: var(--text-dark);
        border: 1px solid #ddd;
    }

        .btn-secondary:hover {
            background-color: #e6e6e6;
            transform: translateY(-3px);
            box-shadow: 0 6px 15px rgba(0,0,0,0.1);
        }

    .divider {
        height: 1px;
        background: linear-gradient(to right, transparent, var(--light-orange), transparent);
        margin: 30px 0;
    }

    /* Animated background effect */
    .delete-container::before {
        content: '';
        position: absolute;
        top: 0;
        right: 0;
        width: 150px;
        height: 150px;
        background: var(--light-orange);
        opacity: 0.2;
        border-radius: 0 0 0 100%;
        z-index: 0;
    }

    .delete-container::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 120px;
        height: 120px;
        background: var(--light-orange);
        opacity: 0.15;
        border-radius: 0 100% 0 0;
        z-index: 0;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .delete-container

    {
        margin: 20px 15px;
        padding: 20px;
    }

    .page-title {
        font-size: 1.8rem;
    }

    .page-subtitle {
        font-size: 1.2rem;
    }

    .detail-label {
        flex: 0 0 30%;
    }

    }

    @@media (max-width: 576px) {
        .delete-container

    {
        margin: 15px;
        padding: 15px;
        border-radius: 12px;
    }

    .page-title {
        font-size: 1.6rem;
    }

    .detail-item {
        flex-direction: column;
    }

    .detail-label {
        flex: 0 0 100%;
        margin-bottom: 8px;
    }

    .detail-value {
        padding-left: 28px;
    }

    .actions-container {
        flex-direction: column;
    }

    .btn {
        width: 100%;
    }

    }
</style>

<div class="delete-container">
    <div class="delete-header">
        <h1 class="page-title">
            <i class="fas fa-trash-alt"></i>
            Xóa bài viết
        </h1>
        <h3 class="page-subtitle">Bạn có chắc chắn muốn xóa bài viết này?</h3>
    </div>

    <div class="warning-box">
        <i class="fas fa-exclamation-triangle"></i>
        <p>Lưu ý: Hành động này <strong>không thể hoàn tác</strong>. Tất cả thông tin của bài viết sẽ bị xóa vĩnh viễn.</p>
    </div>

    <div class="post-details">
        <h2 class="post-title">
            <i class="fas fa-file-alt"></i>
            Thông tin bài viết
        </h2>

        <div class="details-list">
            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-heading"></i>
                    @Html.DisplayNameFor(model => model.Title)
                </div>
                <div class="detail-value">
                    @Html.DisplayFor(model => model.Title)
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-align-left"></i>
                    @Html.DisplayNameFor(model => model.Content)
                </div>
                <div class="detail-value">
                    <div class="content-preview">
                        @Html.DisplayFor(model => model.Content)
                    </div>
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-calendar-plus"></i>
                    @Html.DisplayNameFor(model => model.CreatedAt)
                </div>
                <div class="detail-value">
                    @Html.DisplayFor(model => model.CreatedAt)
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-calendar-check"></i>
                    @Html.DisplayNameFor(model => model.UpdatedAt)
                </div>
                <div class="detail-value">
                    @Html.DisplayFor(model => model.UpdatedAt)
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-folder-open"></i>
                    @Html.DisplayNameFor(model => model.Blog)
                </div>
                <div class="detail-value">
                    @Html.DisplayFor(model => model.Blog.Description)
                </div>
            </div>
        </div>
    </div>

    <div class="divider"></div>

    <form asp-action="Delete" id="deleteForm">
        <input type="hidden" asp-for="PostId" />
        <div class="actions-container">
            <button type="button" class="btn btn-danger" onclick="confirmDelete()">
                <i class="fas fa-trash-alt"></i> Xóa bài viết
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </form>
</div>

<script>
    function confirmDelete() {
        Swal.fire({
            title: 'Bạn có chắc chắn?',
            text: "Bài viết này sẽ bị xóa vĩnh viễn và không thể khôi phục!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#e74c3c',
            cancelButtonColor: '#6c757d',
            confirmButtonText: '<i class="fas fa-trash-alt"></i> Xóa',
            cancelButtonText: '<i class="fas fa-times"></i> Hủy',
            reverseButtons: true
        }).then((result) => {
            if (result.isConfirmed) {
                document.getElementById('deleteForm').submit();
            }
        });
    }
</script>
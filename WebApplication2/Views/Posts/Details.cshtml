@model WebApplication2.Models.Post

@{
    ViewData["Title"] = "Chi tiết Bài viết";
}

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
    /* Main color variables */
    :root {
        --primary-orange: #FF7F24;
        --secondary-orange: #FFA07A;
        --light-orange: #FFE4C4;
        --dark-orange: #D2691E;
        --text-dark: #333333;
        --text-light: #ffffff;
        --light-gray: #f5f5f5;
        --accent-blue: #4A89DC;
        --gradient-bg: linear-gradient(135deg, var(--light-orange) 0%, #ffffff 100%);
    }

    body {
        background-color: var(--light-gray);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: var(--text-dark);
        line-height: 1.6;
    }

    .post-container {
        max-width: 900px;
        margin: 30px auto;
        background-color: #ffffff;
        border-radius: 15px;
        box-shadow: 0 12px 25px rgba(210, 105, 30, 0.15);
        overflow: hidden;
        position: relative;
    }

    .post-header {
        background: linear-gradient(135deg, var(--primary-orange) 0%, var(--secondary-orange) 100%);
        color: white;
        padding: 25px 30px;
        position: relative;
    }

    .post-title {
        font-size: 2.4rem;
        font-weight: 700;
        margin-bottom: 20px;
        line-height: 1.3;
        display: flex;
        align-items: center;
        gap: 12px;
    }

        .post-title i {
            font-size: 2rem;
        }

    .post-meta {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        margin-top: 15px;
    }

    .meta-item {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 0.95rem;
        background-color: rgba(255, 255, 255, 0.2);
        padding: 8px 15px;
        border-radius: 20px;
        backdrop-filter: blur(5px);
        transition: all 0.3s ease;
    }

        .meta-item:hover {
            background-color: rgba(255, 255, 255, 0.3);
            transform: translateY(-3px);
        }

        .meta-item i {
            color: var(--light-orange);
        }

    .post-body {
        padding: 30px;
    }

    .post-content {
        background-color: #fff;
        padding: 25px;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        margin-bottom: 30px;
        border-left: 4px solid var(--primary-orange);
    }

    .content-text {
        font-size: 1.1rem;
        line-height: 1.8;
        color: #444;
        white-space: pre-line;
    }

    .post-detail {
        background-color: var(--light-gray);
        border-radius: 10px;
        padding: 20px;
        margin-bottom: 20px;
        border-left: 3px solid var(--secondary-orange);
        transition: all 0.3s ease;
    }

        .post-detail:hover {
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            transform: translateY(-2px);
        }

    .detail-row {
        display: flex;
        margin-bottom: 15px;
        align-items: flex-start;
    }

        .detail-row:last-child {
            margin-bottom: 0;
        }

    .detail-label {
        flex: 0 0 25%;
        font-weight: 600;
        color: var(--dark-orange);
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .detail-label i {
            width: 24px;
            height: 24px;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: var(--light-orange);
            color: var(--dark-orange);
            border-radius: 50%;
            font-size: 0.8rem;
        }

    .detail-value {
        flex: 1;
        padding-left: 15px;
        border-left: 2px solid var(--light-orange);
    }

    .blog-reference {
        background: var(--gradient-bg);
        padding: 20px;
        border-radius: 10px;
        margin-top: 20px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        position: relative;
        border-left: 4px solid var(--primary-orange);
    }

        .blog-reference::before {
            content: '\f02d';
            font-family: 'Font Awesome 6 Free';
            font-weight: 900;
            position: absolute;
            top: -10px;
            left: 20px;
            font-size: 1.2rem;
            background-color: var(--primary-orange);
            color: white;
            width: 30px;
            height: 30px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

    .reference-title {
        font-weight: 600;
        color: var(--dark-orange);
        margin-bottom: 10px;
        padding-left: 20px;
    }

    .reference-text {
        font-style: italic;
        color: #555;
    }

    .action-buttons {
        display: flex;
        gap: 15px;
        margin-top: 30px;
        flex-wrap: wrap;
    }

    .btn {
        padding: 12px 25px;
        border-radius: 30px;
        text-decoration: none;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .btn-primary {
        background-color: var(--primary-orange);
        color: white;
    }

        .btn-primary:hover {
            background-color: var(--dark-orange);
            transform: translateY(-3px);
            box-shadow: 0 6px 15px rgba(210, 105, 30, 0.3);
        }

    .btn-secondary {
        background-color: var(--light-gray);
        color: var(--text-dark);
        border: 1px solid #ddd;
    }

        .btn-secondary:hover {
            background-color: #e0e0e0;
            transform: translateY(-3px);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
        }

    .btn-accent {
        background-color: var(--accent-blue);
        color: white;
    }

        .btn-accent:hover {
            background-color: #3b7dcc;
            transform: translateY(-3px);
            box-shadow: 0 6px 15px rgba(74, 137, 220, 0.3);
        }

    .btn i {
        transition: transform 0.3s ease;
    }

    .btn:hover i {
        transform: translateX(-3px);
    }

    .btn-primary:hover i.fa-edit {
        transform: rotate(15deg);
    }

    .divider {
        height: 1px;
        background: linear-gradient(to right, transparent, var(--secondary-orange), transparent);
        margin: 30px 0;
    }

    .share-panel {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-top: 20px;
    }

    .share-title {
        font-weight: 600;
        color: var(--dark-orange);
    }

    .share-buttons {
        display: flex;
        gap: 10px;
    }

    .share-btn {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.2rem;
        transition: all 0.3s ease;
        box-shadow: 0 3px 8px rgba(0, 0, 0, 0.1);
    }

        .share-btn.facebook {
            background-color: #3b5998;
        }

        .share-btn.twitter {
            background-color: #1da1f2;
        }

        .share-btn.linkedin {
            background-color: #0077b5;
        }

        .share-btn:hover {
            transform: translateY(-3px) scale(1.1);
            box-shadow: 0 5px 12px rgba(0, 0, 0, 0.15);
        }

    /* Decorative elements */
    .post-container::before {
        content: '';
        position: absolute;
        top: 0;
        right: 0;
        width: 150px;
        height: 150px;
        background-color: var(--light-orange);
        opacity: 0.1;
        border-radius: 0 0 0 100%;
        z-index: 0;
    }

    .post-container::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 200px;
        height: 200px;
        background-color: var(--light-orange);
        opacity: 0.1;
        border-radius: 0 100% 0 0;
        z-index: 0;
    }

    .floating-icon {
        position: absolute;
        font-size: 5rem;
        color: rgba(255, 255, 255, 0.1);
        transform: rotate(-15deg);
        top: 20px;
        right: 30px;
        z-index: 1;
    }

    /* Responsive design */
    @@media (max-width: 768px) {
        .post-container

    {
        margin: 20px 15px;
    }

    .post-header {
        padding: 20px;
    }

    .post-title {
        font-size: 2rem;
    }

    .post-body {
        padding: 20px;
    }

    .detail-row {
        flex-direction: column;
    }

    .detail-label {
        flex: 0 0 100%;
        margin-bottom: 8px;
    }

    .detail-value {
        flex: 0 0 100%;
        padding-left: 34px;
    }

    }

    @@media (max-width: 576px) {
        .post-container

    {
        margin: 15px 10px;
        border-radius: 10px;
    }

    .post-header {
        padding: 15px;
    }

    .post-title {
        font-size: 1.8rem;
    }

    .post-meta {
        gap: 10px;
    }

    .meta-item {
        padding: 6px 12px;
        font-size: 0.85rem;
        flex: 1 1 auto;
    }

    .post-body {
        padding: 15px;
    }

    .post-content {
        padding: 15px;
    }

    .content-text {
        font-size: 1rem;
    }

    .btn {
        padding: 10px 20px;
        font-size: 0.9rem;
    }

    }
</style>

<div class="post-container">
    <div class="post-header">
        <i class="fas fa-newspaper floating-icon"></i>
        <h1 class="post-title">
            <i class="fas fa-file-alt"></i>
            @Model.Title
        </h1>
        <div class="post-meta">
            <div class="meta-item">
                <i class="far fa-calendar-alt"></i>
                <span>Đăng: @Html.DisplayFor(model => model.CreatedAt)</span>
            </div>
            <div class="meta-item">
                <i class="fas fa-pencil-alt"></i>
                <span>Cập nhật: @Html.DisplayFor(model => model.UpdatedAt)</span>
            </div>
            <div class="meta-item">
                <i class="fas fa-eye"></i>
                <span>245 lượt xem</span>
            </div>
        </div>
    </div>

    <div class="post-body">
        <div class="post-content">
            <div class="content-text">@Model.Content</div>
        </div>

        <div class="post-detail">
            <div class="detail-row">
                <div class="detail-label">
                    <i class="fas fa-heading"></i>
                    <span>Tiêu đề</span>
                </div>
                <div class="detail-value">@Model.Title</div>
            </div>
            <div class="detail-row">
                <div class="detail-label">
                    <i class="far fa-calendar-plus"></i>
                    <span>Ngày tạo</span>
                </div>
                <div class="detail-value">@Html.DisplayFor(model => model.CreatedAt)</div>
            </div>
            <div class="detail-row">
                <div class="detail-label">
                    <i class="far fa-calendar-check"></i>
                    <span>Cập nhật</span>
                </div>
                <div class="detail-value">@Html.DisplayFor(model => model.UpdatedAt)</div>
            </div>
        </div>

        <div class="blog-reference">
            <div class="reference-title">Blog liên quan</div>
            <div class="reference-text">@Html.DisplayFor(model => model.Blog.Description)</div>
        </div>

        <div class="divider"></div>

        <div class="share-panel">
            <div class="share-title">Chia sẻ:</div>
            <div class="share-buttons">
                <a href="#" class="share-btn facebook">
                    <i class="fab fa-facebook-f"></i>
                </a>
                <a href="#" class="share-btn twitter">
                    <i class="fab fa-twitter"></i>
                </a>
                <a href="#" class="share-btn linkedin">
                    <i class="fab fa-linkedin-in"></i>
                </a>
            </div>
        </div>

        <div class="action-buttons">
            <a asp-action="Edit" asp-route-id="@Model?.PostId" class="btn btn-primary">
                <i class="fas fa-edit"></i> Chỉnh sửa
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại danh sách
            </a>
            <a href="#" class="btn btn-accent">
                <i class="far fa-comment-dots"></i> Bình luận
            </a>
        </div>
    </div>
</div>
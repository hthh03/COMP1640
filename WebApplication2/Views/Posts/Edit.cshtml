@model WebApplication2.Models.Post

@{
    ViewData["Title"] = "Chỉnh sửa bài đăng";
}

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
    /* Main color variables */
    :root {
        --primary-orange: #FF7F24;
        --secondary-orange: #FFA07A;
        --light-orange: #FFE4C4;
        --dark-orange: #D2691E;
        --text-dark: #333333;
        --text-light: #ffffff;
        --light-gray: #f5f5f5;
        --accent-color: #45B8AC;
        --error-color: #FF6B6B;
        --success-color: #66BB6A;
        --border-radius: 12px;
        --box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        --transition: all 0.3s ease;
    }

    body {
        background-color: var(--light-gray);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .edit-container {
        max-width: 900px;
        margin: 20px auto;
        background-color: #ffffff;
        border-radius: var(--border-radius);
        box-shadow: var(--box-shadow);
        padding: 20px 15px;
        position: relative;
        overflow: hidden;
        border-top: 4px solid var(--primary-orange);
    }

    .edit-container::before {
        content: '';
        position: absolute;
        top: 0;
        right: 0;
        width: 120px;
        height: 120px;
        background: var(--light-orange);
        opacity: 0.3;
        border-radius: 0 0 0 100%;
        z-index: 0;
    }

    .page-header {
        position: relative;
        margin-bottom: 20px;
        padding-bottom: 15px;
        border-bottom: 2px solid var(--light-orange);
        z-index: 1;
    }

    .page-header:after {
        content: '';
        position: absolute;
        bottom: -2px;
        left: 0;
        width: 80px;
        height: 3px;
        background-color: var(--primary-orange);
        border-radius: 3px;
        transition: var(--transition);
    }

    .edit-container:hover .page-header:after {
        width: 120px;
    }

    .page-title {
        font-size: 1.8rem;
        color: var(--dark-orange);
        font-weight: 700;
        margin-bottom: 5px;
        display: flex;
        align-items: center;
    }

    .page-title i {
        margin-right: 12px;
        color: var(--primary-orange);
        font-size: 1.6rem;
        transition: var(--transition);
    }

    .edit-container:hover .page-title i {
        transform: rotate(5deg) scale(1.1);
    }

    .page-subtitle {
        font-size: 1.2rem;
        color: var(--secondary-orange);
        margin-bottom: 0;
        display: flex;
        align-items: center;
    }

    .page-subtitle i {
        margin-right: 10px;
        color: var(--secondary-orange);
        opacity: 0.8;
    }

    /* Form styling */
    .form-container {
        background-color: white;
        border-radius: var(--border-radius);
        padding: 20px 15px;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.05);
        position: relative;
        z-index: 1;
    }

    .form-group {
        margin-bottom: 20px;
        position: relative;
    }

    .control-label {
        font-weight: 600;
        color: var(--dark-orange);
        margin-bottom: 8px;
        display: block;
        font-size: 1rem;
        transition: var(--transition);
        display: flex;
        align-items: center;
    }

    .control-label i {
        margin-right: 8px;
        color: var(--primary-orange);
        font-size: 1rem;
        transition: var(--transition);
    }

    .form-control {
        display: block;
        width: 100%;
        padding: 10px 12px;
        font-size: 1rem;
        line-height: 1.5;
        color: var(--text-dark);
        background-color: #fff;
        background-clip: padding-box;
        border: 2px solid #e0e0e0;
        border-radius: var(--border-radius);
        transition: var(--transition);
        box-sizing: border-box;
    }

    .form-control:focus {
        outline: none;
        border-color: var(--secondary-orange);
        box-shadow: 0 0 0 3px rgba(255, 160, 122, 0.25);
    }

    .form-control:hover {
        border-color: #ccc;
    }

    textarea.form-control {
        min-height: 120px;
        resize: vertical;
    }

    .text-danger {
        color: var(--error-color);
        font-size: 0.85rem;
        margin-top: 5px;
        display: block;
        font-weight: 500;
    }

    /* DateTime picker styling */
    input[type="datetime-local"] {
        padding-right: 30px;
    }

    /* Select styling */
    select.form-control {
        appearance: none;
        -webkit-appearance: none;
        -moz-appearance: none;
        background-image: url("data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='none' stroke='%23D2691E' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'%3e%3cpolyline points='6 9 12 15 18 9'%3e%3c/polyline%3e%3c/svg%3e");
        background-repeat: no-repeat;
        background-position: right 10px center;
        background-size: 16px;
        padding-right: 40px;
    }

    /* Button styling */
    .btn-container {
        display: flex;
        gap: 15px;
        margin-top: 25px;
        flex-wrap: wrap;
    }

    .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        padding: 12px 20px;
        font-size: 1rem;
        border-radius: 30px;
        cursor: pointer;
        transition: var(--transition);
        border: none;
        text-decoration: none;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.12);
        min-width: 120px;
    }

    .btn i {
        margin-right: 8px;
        transition: var(--transition);
    }

    .btn-primary {
        background-color: var(--primary-orange);
        color: white;
    }

    .btn-primary:hover {
        background-color: var(--dark-orange);
        transform: translateY(-3px);
        box-shadow: 0 6px 12px rgba(210, 105, 30, 0.25);
    }

    .btn-primary:hover i {
        transform: translateX(-3px);
    }

    .btn-secondary {
        background-color: #e0e0e0;
        color: var(--text-dark);
    }

    .btn-secondary:hover {
        background-color: #d4d4d4;
        transform: translateY(-3px);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
    }

    /* Back link styling */
    .back-link {
        display: inline-flex;
        align-items: center;
        margin-top: 20px;
        color: var(--dark-orange);
        text-decoration: none;
        font-weight: 600;
        transition: var(--transition);
        font-size: 1rem;
    }

    .back-link i {
        margin-right: 8px;
        transition: var(--transition);
    }

    .back-link:hover {
        color: var(--primary-orange);
    }

    .back-link:hover i {
        transform: translateX(-3px);
    }

    /* Form sections */
    .form-section {
        margin-bottom: 25px;
        padding-bottom: 15px;
        border-bottom: 1px dashed #e0e0e0;
    }

    .form-section:last-child {
        border-bottom: none;
        margin-bottom: 0;
        padding-bottom: 0;
    }

    .section-title {
        font-size: 1.2rem;
        color: var(--dark-orange);
        margin-bottom: 15px;
        display: flex;
        align-items: center;
    }

    .section-title i {
        margin-right: 10px;
        color: var(--primary-orange);
    }

    /* Tooltip styling */
    .tooltip-icon {
        color: var(--secondary-orange);
        font-size: 1rem;
        margin-left: 8px;
        cursor: help;
        position: relative;
    }

    .tooltip-icon:hover::after {
        content: attr(data-tooltip);
        position: absolute;
        bottom: 100%;
        left: 50%;
        transform: translateX(-50%);
        background-color: var(--dark-orange);
        color: white;
        padding: 8px 12px;
        border-radius: 6px;
        font-size: 0.85rem;
        white-space: nowrap;
        z-index: 10;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
    }

    .tooltip-icon:hover::before {
        content: '';
        position: absolute;
        bottom: 100%;
        left: 50%;
        transform: translateX(-50%);
        border-width: 6px;
        border-style: solid;
        border-color: var(--dark-orange) transparent transparent transparent;
        z-index: 10;
    }

    /* Status indicator */
    .status-indicator {
        position: absolute;
        top: 15px;
        right: 15px;
        background-color: var(--light-orange);
        color: var(--dark-orange);
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 0.9rem;
        font-weight: 600;
        display: flex;
        align-items: center;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.08);
        z-index: 2;
    }

    .status-indicator i {
        margin-right: 5px;
    }

    /* Helper text */
    .helper-text {
        color: #777;
        font-size: 0.85rem;
        margin-top: 5px;
        display: flex;
        align-items: center;
    }

    .helper-text i {
        margin-right: 5px;
        color: var(--secondary-orange);
    }

    /* Responsive styling */
    @media (max-width: 767px) {
        .edit-container {
            margin: 15px;
            padding: 15px;
        }

        .page-title {
            font-size: 1.6rem;
        }

        .page-title i {
            font-size: 1.4rem;
        }

        .page-subtitle {
            font-size: 1.1rem;
        }

        .form-container {
            padding: 15px;
        }

        .btn {
            padding: 10px 16px;
            font-size: 0.95rem;
        }
    }

    @media (max-width: 576px) {
        .edit-container {
            padding: 12px;
            margin: 10px;
        }

        .status-indicator {
            position: static;
            margin-bottom: 15px;
            display: inline-flex;
            justify-content: center;
        }

        .page-title {
            font-size: 1.4rem;
        }

        .page-title i {
            font-size: 1.3rem;
        }

        .page-subtitle {
            font-size: 1rem;
        }

        .form-container {
            padding: 12px;
        }

        .section-title {
            font-size: 1.1rem;
        }

        .btn-container {
            flex-direction: column;
        }

        .btn {
            width: 100%;
            padding: 8px 16px;
            font-size: 0.9rem;
            min-width: auto;
        }

        .tooltip-icon:hover::after {
            white-space: normal;
            width: 200px;
            left: auto;
            right: 0;
            transform: none;
        }
    }

    /* iPhone 5 specific optimizations */
    @media (max-width: 320px) {
        .edit-container {
            margin: 8px;
            padding: 10px;
            border-radius: 8px;
        }

        .page-header {
            margin-bottom: 15px;
            padding-bottom: 10px;
        }

        .page-title {
            font-size: 1.3rem;
        }

        .page-title i {
            font-size: 1.2rem;
            margin-right: 8px;
        }

        .page-subtitle {
            font-size: 0.95rem;
        }

        .section-title {
            font-size: 1rem;
            margin-bottom: 10px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .control-label {
            font-size: 0.9rem;
        }

        .form-control {
            padding: 8px 10px;
            font-size: 0.9rem;
        }

        .helper-text {
            font-size: 0.8rem;
        }

        .form-section {
            margin-bottom: 20px;
            padding-bottom: 10px;
        }

        .btn {
            padding: 8px 12px;
            font-size: 0.85rem;
        }

        .back-link {
            font-size: 0.9rem;
        }
    }
</style>

<div class="edit-container">
    <div class="status-indicator">
        <i class="fas fa-pen-to-square"></i> Edit Mode
    </div>

    <div class="page-header">
        <h1 class="page-title">
            <i class="fas fa-edit"></i> Edit
        </h1>
        <h4 class="page-subtitle">
            <i class="far fa-file-alt"></i> Post
        </h4>
    </div>

    <div class="form-container">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PostId" />

            <div class="form-section">
                <h3 class="section-title">
                    <i class="fas fa-info-circle"></i> Basic Information
                </h3>

                <div class="form-group">
                    <label asp-for="Title" class="control-label">
                        <i class="fas fa-heading"></i> Title
                    </label>
                    <input asp-for="Title" class="form-control" placeholder="Enter post title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <div class="helper-text">
                        <i class="fas fa-lightbulb"></i> Title should be concise and engaging
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Content" class="control-label">
                        <i class="fas fa-align-left"></i> Content
                        <i class="fas fa-question-circle tooltip-icon" data-tooltip="Enter detailed content for the post"></i>
                    </label>
                    <textarea asp-for="Content" class="form-control" placeholder="Enter detailed post content"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
            </div>

            <div class="form-section">
                <h3 class="section-title">
                    <i class="fas fa-clock"></i> Time Information
                </h3>

                <div class="form-group">
                    <label asp-for="CreatedAt" class="control-label">
                        <i class="far fa-calendar-plus"></i> Created Date
                    </label>
                    <input asp-for="CreatedAt" class="form-control" type="datetime-local" />
                    <span asp-validation-for="CreatedAt" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="UpdatedAt" class="control-label">
                        <i class="far fa-calendar-check"></i> Updated Date
                    </label>
                    <input asp-for="UpdatedAt" class="form-control" type="datetime-local" />
                    <span asp-validation-for="UpdatedAt" class="text-danger"></span>
                </div>
            </div>

            <div class="form-section">
                <h3 class="section-title">
                    <i class="fas fa-link"></i> Connections
                </h3>

                <div class="form-group">
                    <label asp-for="BlogId" class="control-label">
                        <i class="fas fa-blog"></i> Blog
                    </label>
                    <select asp-for="BlogId" class="form-control" asp-items="ViewBag.BlogId"></select>
                    <span asp-validation-for="BlogId" class="text-danger"></span>
                </div>
            </div>

            <div class="btn-container">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Save Changes
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Cancel
                </a>
            </div>
        </form>
    </div>

    <a asp-action="Index" class="back-link">
        <i class="fas fa-arrow-left"></i> Back to List
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
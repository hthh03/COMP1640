@model Course

@{
    ViewData["Title"] = "Create New Course";
}

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
    :root {
        --primary-color: #FF7F50;
        --primary-light: rgba(255, 127, 80, 0.1);
        --primary-dark: #E86C3A;
        --primary-shadow: rgba(255, 127, 80, 0.25);
        --text-dark: #333333;
        --text-muted: #6c757d;
        --white: #ffffff;
        --light-gray: #f8f9fa;
    }

    body {
        background-color: #f5f5f5;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
    }

    .page-header {
        position: relative;
        text-align: center;
        padding-bottom: 10px;
        margin-bottom: 20px;
    }

        .page-header:after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 60px;
            height: 2px;
            background-color: var(--primary-color);
            border-radius: 2px;
        }

    .header-icon {
        font-size: 1.5rem;
        color: var(--primary-color);
        margin-bottom: 10px;
        display: block;
    }

    .form-card {
        border: none;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        transition: all 0.3s ease;
        position: relative;
        width: 100%;
        max-width: 100%;
    }

        .form-card:hover {
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.12);
            transform: translateY(-3px);
        }

    .card-decoration, .card-decoration-2 {
        position: absolute;
        background-color: var(--primary-light);
        border-radius: 50%;
        z-index: 0;
    }

    .card-decoration {
        top: -15px;
        right: -15px;
        width: 70px;
        height: 70px;
    }

    .card-decoration-2 {
        bottom: -20px;
        left: -20px;
        width: 100px;
        height: 100px;
    }

    .card-header {
        position: relative;
        z-index: 1;
        border-bottom: none;
        padding: 1.25rem 1rem;
    }

    .card-body {
        position: relative;
        z-index: 1;
        padding: 1.5rem;
    }

    .form-control {
        border: 1px solid #e9ecef;
        border-radius: 8px;
        padding: 8px 12px;
        font-size: 0.95rem;
        transition: all 0.3s ease;
        width: 100%;
    }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.2rem var(--primary-shadow);
        }

    .form-label {
        margin-bottom: 0.5rem;
        font-weight: 500;
        color: var(--text-dark);
        display: flex;
        align-items: center;
        font-size: 0.9rem;
    }

    .label-icon {
        margin-right: 6px;
        color: var(--primary-color);
        font-size: 0.85rem;
    }

    .btn {
        padding: 8px 16px;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 6px;
        font-size: 0.9rem;
    }

    .btn-primary {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
    }

        .btn-primary:hover {
            background-color: var(--primary-dark);
            border-color: var(--primary-dark);
            transform: translateY(-2px);
            box-shadow: 0 3px 10px var(--primary-shadow);
        }

    .btn-outline-secondary {
        border-color: #ced4da;
        color: var(--text-muted);
    }

        .btn-outline-secondary:hover {
            background-color: var(--light-gray);
            color: var(--text-dark);
            transform: translateY(-2px);
        }

    .form-footer {
        border-top: 1px solid #e9ecef;
        padding-top: 1.25rem;
        margin-top: 1.5rem;
        display: flex;
        justify-content: space-between;
    }

    .character-count {
        font-size: 0.75rem;
        color: var(--text-muted);
        text-align: right;
        margin-top: 3px;
    }

    .field-hint {
        font-size: 0.75rem;
        color: var(--text-muted);
        margin-top: 3px;
    }

    .input-group-text {
        font-size: 0.85rem;
        padding: 0.375rem 0.75rem;
    }

    /* Responsive Design */
    @@media (max-width: 991px) {
        .container

    {
        padding: 0 15px;
    }

    .form-card {
        margin: 0 10px;
    }

    }

    @@media (max-width: 767px) {
        .page-header

    {
        margin-bottom: 15px;
    }

    .page-header h1 {
        font-size: 1.25rem;
    }

    .header-icon {
        font-size: 1.4rem;
    }

    .form-card {
        margin: 0 5px;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.08);
    }

    .card-header {
        padding: 0.75rem;
    }

        .card-header h2 {
            font-size: 1.1rem;
        }

    .card-body {
        padding: 0.75rem;
    }

    .btn {
        padding: 6px 12px;
        font-size: 0.8rem;
    }

    }</style>

<div class="container mt-4 mb-4">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9 col-sm-12">
            <div class="page-header">
                <i class="fas fa-book-open header-icon"></i>
                <h1 class="fw-bold" style="color: var(--text-dark); font-size: 1.5rem;">Create New Course</h1>
            </div>

            <div class="form-card card shadow border-0">
                <div class="card-decoration"></div>
                <div class="card-decoration-2"></div>

                <div class="card-header bg-soft-orange">
                    <h2 class="card-title text-dark mb-0 fw-bold" style="color: var(--primary-color); font-size: 1.1rem; text-align: center;">
                        <i class="fas fa-chalkboard-teacher me-2"></i>Course Information
                    </h2>
                </div>

                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label">
                                <i class="fas fa-heading label-icon"></i>Course Name
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-pencil-alt"></i>
                                </span>
                                <input asp-for="Name" class="form-control"
                                       placeholder="Enter course name..." maxlength="100" />
                            </div>
                            <div class="field-hint">
                                <i class="fas fa-info-circle me-1"></i>Course name should be concise and engaging
                            </div>
                            <div class="character-count">
                                <span id="nameCount">0/100</span> characters
                            </div>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Description" class="form-label">
                                <i class="fas fa-align-left label-icon"></i>Description
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-quote-right"></i>
                                </span>
                                <textarea asp-for="Description" class="form-control"
                                          rows="3" placeholder="Brief description of the course..." maxlength="1000"></textarea>
                            </div>
                            <div class="field-hint">
                                <i class="fas fa-lightbulb me-1"></i>Summarize the main content of the course
                            </div>
                            <div class="character-count">
                                <span id="descCount">0/1000</span> characters
                            </div>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <!-- Hidden input for TeacherId -->
                        <input type="hidden" asp-for="TeacherId" />

                        <div class="form-footer">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i>
                                <span>Back</span>
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i>
                                <span>Create</span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-3">
                <p class="text-muted" style="font-size: 0.8rem;">
                    <i class="fas fa-shield-alt me-1"></i>
                    All courses will be reviewed before publishing
                </p>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-soft-orange {
        background-color: rgba(255, 127, 80, 0.1);
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            let nameInput = document.querySelector('input[id="Name"]');
            let descInput = document.querySelector('textarea[id="Description"]');
            let nameCount = document.getElementById('nameCount');
            let descCount = document.getElementById('descCount');

            if (!nameInput) nameInput = document.querySelector('input[name="Name"]');
            if (!descInput) descInput = document.querySelector('textarea[name="Description"]');

            function updateCount(input, countElement, maxLength) {
                if (!input || !countElement) return;
                const currentLength = input.value.length;
                countElement.textContent = `${currentLength}/${maxLength}`;
                countElement.style.color = currentLength >= maxLength ? 'red' :
                                         currentLength >= maxLength * 0.8 ? 'orange' :
                                         'var(--text-muted)';
            }

            if (nameInput && nameCount) {
                nameInput.addEventListener('input', function() { updateCount(this, nameCount, 100); });
                updateCount(nameInput, nameCount, 100);
            }

            if (descInput && descCount) {
                descInput.addEventListener('input', function() { updateCount(this, descCount, 1000); });
                updateCount(descInput, descCount, 1000);
            }
        });
    </script>
}
@model Course

<h2>Khóa học: @Model.Name</h2>
<p>Giáo viên: @Model.Teacher.FullName</p>

@if (User.IsInRole("Student"))
{
    <a asp-action="SubmitAssignment" asp-route-courseId="@Model.Id" class="btn btn-warning">Nộp bài tập</a>
}

<h3>Danh sách học viên</h3>
<table class="table">
    <thead>
        <tr>
            <th>Tên học viên</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model.StudentCourses.Select(sc => sc.Student))
        {
            <tr>
                <td>@student.FullName</td>
            </tr>
        }
    </tbody>
</table>

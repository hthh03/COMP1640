@model Course

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
    :root {
        --primary-orange: #FF7F24;
        --secondary-orange: #FFA07A;
        --light-orange: #FFE4C4;
        --dark-orange: #D2691E;
        --text-dark: #333333;
        --text-light: #ffffff;
        --light-gray: #f5f5f5;
        --accent-color: #45B8AC;
        --gradient-bg: linear-gradient(135deg, var(--light-orange) 0%, #ffffff 100%);
    }

    body {
        background-color: var(--light-gray);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
    }

    .course-container {
        max-width: 900px;
        margin: 30px auto;
        background-color: #ffffff;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(210, 105, 30, 0.2);
        padding: 25px;
        border-top: 5px solid var(--primary-orange);
        position: relative;
        overflow: hidden;
    }

        .course-container::before {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 150px;
            height: 150px;
            background: var(--light-orange);
            opacity: 0.3;
            border-radius: 0 0 0 100%;
            z-index: 0;
        }

    .course-header {
        border-bottom: 2px solid var(--light-orange);
        padding-bottom: 20px;
        margin-bottom: 25px;
        position: relative;
        z-index: 1;
    }

        .course-header::after {
            content: '';
            position: absolute;
            bottom: -2px;
            left: 0;
            width: 100px;
            height: 3px;
            background-color: var(--primary-orange);
            border-radius: 3px;
            transition: width 0.3s ease;
        }

    .course-container:hover .course-header::after {
        width: 150px;
    }

    .course-title {
        font-size: 2.2rem;
        color: var(--dark-orange);
        font-weight: 700;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        flex-wrap: wrap;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.05);
        line-height: 1.3;
    }

        .course-title i {
            margin-right: 12px;
            color: var(--primary-orange);
            transform: rotate(-5deg);
            transition: transform 0.3s ease;
        }

    .course-container:hover .course-title i {
        transform: rotate(0deg) scale(1.1);
    }

    .teacher-info {
        background-color: rgba(255, 245, 238, 0.7);
        border-radius: 12px;
        padding: 15px;
        margin-bottom: 20px;
        box-shadow: 0 3px 10px rgba(0,0,0,0.03);
        border-left: 4px solid var(--secondary-orange);
        display: flex;
        align-items: center;
        font-size: 1rem;
    }

    .teacher-label {
        font-weight: 600;
        color: var(--dark-orange);
        margin-right: 8px;
    }

        .teacher-label i {
            margin-right: 8px;
            color: var(--primary-orange);
        }

    .actions-container {
        display: flex;
        gap: 15px;
        margin-top: 20px;
        flex-wrap: wrap;
        justify-content: flex-start;
        position: relative;
        z-index: 1;
    }

    .btn {
        padding: 12px 24px;
        border-radius: 30px;
        cursor: pointer;
        font-weight: 600;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border: none;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        font-size: 1rem;
        min-width: 140px;
    }

        .btn i {
            margin-right: 10px;
            transition: transform 0.3s ease;
        }

        .btn:hover i {
            transform: translateX(-3px);
        }

    .btn-primary {
        background-color: var(--primary-orange);
        color: var(--text-light);
    }

        .btn-primary:hover {
            background-color: var(--dark-orange);
            transform: translateY(-3px);
            box-shadow: 0 6px 15px rgba(210, 105, 30, 0.3);
        }

    .btn-accent {
        background-color: var(--accent-color);
        color: var(--text-light);
    }

        .btn-accent:hover {
            background-color: #3AA99E;
            transform: translateY(-3px);
            box-shadow: 0 6px 15px rgba(69, 184, 172, 0.3);
        }

    .student-section {
        background-color: rgba(255, 245, 238, 0.7);
        border-radius: 12px;
        box-shadow: 0 3px 10px rgba(0,0,0,0.05);
        padding: 20px;
        margin-top: 20px;
    }

    .section-header {
        font-size: 1.6rem;
        color: var(--dark-orange);
        font-weight: 600;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
    }

        .section-header i {
            margin-right: 10px;
            color: var(--primary-orange);
        }

    .student-table {
        width: 100%;
        border-collapse: collapse;
    }

        .student-table th {
            background-color: var(--light-orange);
            color: var(--dark-orange);
            text-align: left;
            padding: 12px 20px;
            font-weight: 600;
            border-bottom: 2px solid var(--secondary-orange);
        }

        .student-table td {
            padding: 12px 20px;
            border-bottom: 1px solid var(--light-orange);
            color: var(--text-dark);
        }

        .student-table tr:hover {
            background-color: rgba(255, 245, 238, 0.9);
        }

        .student-table tr:last-child td {
            border-bottom: none;
        }

    /* Responsive Design */
    @@media (max-width: 991px) { /* Tablet */
        .course-container

    {
        max-width: 90%;
        margin: 20px auto;
        padding: 20px;
    }

    .course-title {
        font-size: 2rem;
    }

    .teacher-info {
        padding: 12px;
        font-size: 0.95rem;
    }

    .btn {
        padding: 10px 20px;
        min-width: 130px;
    }

    .section-header {
        font-size: 1.4rem;
    }

    .student-table th,
    .student-table td {
        padding: 10px 15px;
    }

    }

    @@media (max-width: 767px) { /* Mobile */
        .course-container

    {
        max-width: 100%;
        margin: 15px;
        padding: 15px;
        border-radius: 12px;
    }

    .course-title {
        font-size: 1.8rem;
    }

        .course-title i {
            margin-right: 10px;
        }

    .course-header {
        padding-bottom: 15px;
        margin-bottom: 20px;
    }

    .teacher-info {
        padding: 10px;
        font-size: 0.9rem;
    }

    .actions-container {
        flex-direction: column;
        gap: 10px;
    }

    .btn {
        padding: 10px 20px;
        font-size: 0.95rem;
        min-width: 100%;
    }

    .section-header {
        font-size: 1.3rem;
    }

    .student-table th,
    .student-table td {
        padding: 8px 12px;
        font-size: 0.9rem;
    }

    }

    @@media (max-width: 400px) { /* Small Mobile */
        .course-container

    {
        margin: 10px;
        padding: 12px;
    }

    .course-title {
        font-size: 1.6rem;
    }

    .teacher-info {
        padding: 8px;
        font-size: 0.85rem;
    }

    .btn {
        padding: 8px 16px;
        font-size: 0.9rem;
    }

    .section-header {
        font-size: 1.2rem;
    }

    .student-table th,
    .student-table td {
        padding: 6px 10px;
        font-size: 0.85rem;
    }

    }
</style>

<div class="course-container">
    <div class="course-header">
        <h2 class="course-title">
            <i class="fas fa-book-open"></i>
            Course: @Model.Name
        </h2>
        <div class="teacher-info">
            <span class="teacher-label">
                <i class="fas fa-chalkboard-teacher"></i>
                Teacher:
            </span>
            <span>@Model.Teacher.FullName</span>
        </div>
        @if (User.IsInRole("Student"))
        {
            <div class="actions-container">
                <a asp-action="SubmitAssignment" asp-route-courseId="@Model.Id" class="btn btn-primary">
                    <i class="fas fa-upload"></i> Submit Assignment
                </a>
                <a href="https://localhost:7286/meeting/create" class="btn btn-accent">
                    <i class="fas fa-video"></i> Join Meeting
                </a>
            </div>
        }
        @if (User.IsInRole("Teacher"))
        {
            <div class="actions-container">
                <a asp-controller="Assignments" asp-action="Create" asp-route-courseId="@Model.Id" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Create Homework
                </a>
                <a href="https://localhost:7286/meeting/create" class="btn btn-accent">
                    <i class="fas fa-video"></i> Create Meeting
                </a>
            </div>
        }
    </div>
    <div class="student-section">
        <h3 class="section-header">
            <i class="fas fa-users"></i>
            Student List
        </h3>
        <table class="student-table">
            <thead>
                <tr>
                    <th>Student Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Model.StudentCourses.Select(sc => sc.Student))
                {
                    <tr>
                        <td>@student.FullName</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
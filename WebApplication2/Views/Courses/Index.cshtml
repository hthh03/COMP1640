@model IEnumerable<Course>
@{
    ViewData["Title"] = "Courses";
}

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
    /* Main color variables (aligned with Blog Posts page) */
    :root {
        --primary-orange: #FF7F24;
        --secondary-orange: #FFA07A;
        --light-orange: #FFE4C4;
        --dark-orange: #D2691E;
        --text-dark: #333333;
        --text-light: #ffffff;
        --light-gray: #f5f5f5;
        --accent-color: #45B8AC;
        --table-hover: rgba(255, 127, 36, 0.08);
        --table-stripe: rgba(255, 224, 196, 0.3);
        --shadow-sm: 0 2px 6px rgba(0,0,0,0.1);
        --shadow-md: 0 5px 15px rgba(210, 105, 30, 0.15);
        --gradient-bg: linear-gradient(135deg, var(--light-orange) 0%, #ffffff 100%);
        --meeting-blue: #4A90E2;
        --meeting-blue-dark: #357ABD;
    }

    body {
        background-color: var(--light-gray);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
        overflow-x: hidden;
    }

    .page-container {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 0 1.25rem;
    }

    .header-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
        position: relative;
    }

    .page-title {
        font-size: clamp(1.6rem, 4vw, 2.2rem);
        color: var(--dark-orange);
        font-weight: 700;
        display: inline-flex;
        align-items: center;
        margin: 0;
    }

        .page-title i {
            margin-right: 0.75rem;
            color: var(--primary-orange);
            font-size: clamp(1.4rem, 3vw, 1.8rem);
        }

        .page-title::after {
            content: '';
            position: absolute;
            bottom: -0.5rem;
            left: 0;
            width: 60px;
            height: 3px;
            background-color: var(--primary-orange);
            border-radius: 3px;
            transition: width 0.3s ease;
        }

        .page-title:hover::after {
            width: 100px;
        }

    .create-btn {
        padding: 0.75rem 1.5rem;
        background-color: var(--primary-orange);
        color: var(--text-light);
        border-radius: 30px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: var(--shadow-sm);
        display: inline-flex;
        align-items: center;
    }

        .create-btn i {
            margin-right: 0.5rem;
            transition: transform 0.3s ease;
        }

        .create-btn:hover {
            background-color: var(--dark-orange);
            transform: translateY(-3px);
            box-shadow: var(--shadow-md);
        }

            .create-btn:hover i {
                transform: rotate(90deg);
            }

    .card-container {
        background-color: white;
        border-radius: 16px;
        box-shadow: var(--shadow-md);
        overflow: hidden;
        border-top: 5px solid var(--primary-orange);
        position: relative;
    }

        .card-container::before {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 150px;
            height: 150px;
            background: var(--light-orange);
            opacity: 0.3;
            border-radius: 0 0 0 100%;
            z-index: 0;
        }

    .courses-table {
        width: 100%;
        border-collapse: collapse;
        border-spacing: 0;
        background-color: white;
    }

        .courses-table thead {
            background-color: rgba(255, 224, 196, 0.7);
        }

        .courses-table th {
            padding: 0.75rem 1.25rem;
            font-weight: 600;
            color: var(--dark-orange);
            text-align: left;
            font-size: 1rem;
            position: relative;
            cursor: pointer;
            transition: all 0.3s ease;
            white-space: nowrap;
        }

            .courses-table th i.fa-sort {
                margin-left: 0.25rem;
                font-size: 0.9rem;
                opacity: 0.7;
            }

            .courses-table th i:first-child {
                margin-right: 0.25rem;
                opacity: 0.9;
            }

            .courses-table th:hover {
                background-color: rgba(255, 224, 196, 0.9);
            }

        .courses-table td {
            padding: 0.75rem 1.25rem;
            vertical-align: middle;
            border-top: 1px solid #eee;
            color: var(--text-dark);
            transition: all 0.2s ease;
        }

        .courses-table tbody tr {
            transition: all 0.3s ease;
        }

            .courses-table tbody tr:nth-child(even) {
                background-color: var(--table-stripe);
            }

            .courses-table tbody tr:hover {
                background-color: var(--table-hover);
                transform: translateY(-2px);
                box-shadow: 0 3px 10px rgba(0,0,0,0.05);
            }

    .name-cell {
        font-weight: 600;
        color: var(--dark-orange);
        max-width: 250px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

        .name-cell i {
            margin-right: 0.5rem;
            color: var(--primary-orange);
            transition: transform 0.3s ease;
        }

    .courses-table tbody tr:hover .name-cell i {
        transform: rotate(15deg);
    }

    .description-cell {
        max-width: 300px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        font-size: 0.95rem;
        color: #555;
    }

    .teacher-cell {
        background-color: var(--light-orange);
        color: var(--dark-orange);
        padding: 0.25rem 0.5rem;
        border-radius: 12px;
        font-size: 0.85rem;
        display: inline-flex;
        align-items: center;
        transition: all 0.3s ease;
        font-weight: 600;
    }

        .teacher-cell i {
            margin-right: 0.25rem;
            font-size: 0.8rem;
        }

        .teacher-cell:hover {
            background-color: var(--secondary-orange);
            color: white;
            transform: translateY(-2px);
        }

    .actions-cell {
        display: flex;
        gap: 0.5rem;
        justify-content: flex-end;
        white-space: nowrap;
    }

    .action-btn {
        padding: 0.5rem 0.75rem;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        font-size: 0.9rem;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
    }

        .action-btn i {
            margin-right: 0.25rem;
        }

    .edit-btn {
        background-color: var(--accent-color);
        color: white;
    }

        .edit-btn:hover {
            background-color: #3AA99E;
            transform: translateY(-2px);
            box-shadow: 0 3px 8px rgba(69, 184, 172, 0.3);
        }

    .details-btn {
        background-color: var(--light-orange);
        color: var(--dark-orange);
    }

        .details-btn:hover {
            background-color: var(--secondary-orange);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 3px 8px rgba(255, 160, 122, 0.3);
        }

    .delete-btn {
        background-color: #ff6b6b;
        color: white;
    }

        .delete-btn:hover {
            background-color: #ff5252;
            transform: translateY(-2px);
            box-shadow: 0 3px 8px rgba(255, 107, 107, 0.3);
        }

    .join-btn {
        padding: 0.5rem 0.75rem;
        border-radius: 8px;
        background-color: var(--primary-orange);
        color: white;
        border: none;
        font-weight: 600;
        font-size: 0.9rem;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        cursor: pointer;
    }

        .join-btn i {
            margin-right: 0.25rem;
        }

        .join-btn:hover {
            background-color: var(--dark-orange);
            transform: translateY(-2px);
            box-shadow: 0 3px 8px rgba(255, 127, 36, 0.3);
        }

    .meeting-btn {
        padding: 0.5rem 0.75rem;
        border-radius: 8px;
        background-color: var(--meeting-blue);
        color: white;
        font-weight: 600;
        font-size: 0.9rem;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        text-decoration: none;
    }

        .meeting-btn i {
            margin-right: 0.25rem;
        }

        .meeting-btn:hover {
            background-color: var(--meeting-blue-dark);
            transform: translateY(-2px);
            box-shadow: 0 3px 8px rgba(74, 144, 226, 0.3);
        }

    .popup {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: var(--light-orange);
        color: var(--dark-orange);
        padding: 20px;
        border: 1px solid var(--secondary-orange);
        border-radius: 5px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
        text-align: center;
        z-index: 1000;
        font-weight: 600;
    }

    .hidden {
        display: none;
    }

    .stats-bar {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
        gap: 1rem;
        margin-bottom: 1.25rem;
    }

    .stat-card {
        background-color: white;
        padding: 0.75rem 1.25rem;
        border-radius: 12px;
        box-shadow: var(--shadow-sm);
        display: flex;
        align-items: center;
        transition: all 0.3s ease;
        border-left: 4px solid var(--primary-orange);
    }

        .stat-card:hover {
            transform: translateY(-3px);
            box-shadow: var(--shadow-md);
        }

    .stat-icon {
        width: 45px;
        height: 45px;
        background-color: var(--light-orange);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 0.75rem;
        font-size: 1.3rem;
        color: var(--primary-orange);
    }

    .stat-content {
        display: flex;
        flex-direction: column;
    }

    .stat-value {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--dark-orange);
    }

    .stat-label {
        font-size: 0.9rem;
        color: #777;
    }

    .search-container {
        margin-bottom: 1.25rem;
        display: flex;
        gap: 0.5rem;
    }

    .search-input {
        flex: 1;
        padding: 0.75rem 1rem;
        border-radius: 30px;
        border: 1px solid #ddd;
        font-size: 1rem;
        transition: all 0.3s ease;
        box-shadow: var(--shadow-sm);
        padding-left: 2.5rem;
        position: relative;
    }

    .search-box {
        position: relative;
        flex: 1;
    }

        .search-box i {
            position: absolute;
            left: 0.75rem;
            top: 50%;
            transform: translateY(-50%);
            color: #aaa;
            z-index: 1;
        }

    .search-input:focus {
        outline: none;
        border-color: var(--secondary-orange);
        box-shadow: 0 0 0 3px rgba(255, 160, 122, 0.2);
    }

    .filter-btn {
        padding: 0 1.25rem;
        border-radius: 30px;
        background-color: var(--light-gray);
        border: 1px solid #ddd;
        cursor: pointer;
        display: flex;
        align-items: center;
        transition: all 0.3s ease;
    }

        .filter-btn:hover {
            background-color: var(--light-orange);
        }

    .empty-state {
        padding: 2rem 1.25rem;
        text-align: center;
        color: #777;
    }

    .empty-icon {
        font-size: 3rem;
        color: var(--light-orange);
        margin-bottom: 0.75rem;
    }

    .empty-message {
        font-size: 1.2rem;
        margin-bottom: 1.25rem;
    }

    /* Responsive styles */
    @@media (max-width: 992px) {
        .courses-table th, .courses-table td {
            padding: 0.75rem 1rem;
        }

        .stats-bar {
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        }
    }

    @@media (max-width: 768px) {
        .header-container {
            flex-direction: column;
            align-items: flex-start;
            gap: 1rem;
        }

        .description-cell, .teacher-cell {
            max-width: 150px;
        }

        .actions-cell {
            flex-direction: column;
            gap: 0.25rem;
        }

        .action-btn, .join-btn, .meeting-btn {
            padding: 0.4rem 0.6rem;
            font-size: 0.85rem;
        }
    }

    @@media (max-width: 576px) {
        .page-container {
            margin: 1.25rem auto;
            padding: 0 0.75rem;
        }

        .card-container {
            border-radius: 12px;
        }

        .courses-table {
            display: block;
            overflow-x: auto;
        }

            .courses-table th, .courses-table td {
                padding: 0.5rem 0.75rem;
                font-size: 0.9rem;
            }

        .stats-bar {
            grid-template-columns: 1fr;
        }

        .action-btn, .join-btn, .meeting-btn {
            width: 100%;
            justify-content: center;
        }

        .search-container {
            flex-direction: column;
        }

        .filter-btn {
            padding: 0.5rem 1rem;
            width: 100%;
            justify-content: center;
        }
    }

    @@media (max-width: 320px) {
        .page-title {
            font-size: 1.4rem;
        }

            .page-title i {
                font-size: 1.2rem;
            }

        .courses-table th, .courses-table td {

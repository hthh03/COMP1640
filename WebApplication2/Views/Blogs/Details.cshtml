@model WebApplication2.Models.Blog
@{
    ViewData["Title"] = "Blog Details";
}

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
    /* Main color variables */
    :root {
        --primary-orange: #FF7F24;
        --secondary-orange: #FFA07A;
        --light-orange: #FFE4C4;
        --dark-orange: #D2691E;
        --text-dark: #333333;
        --text-light: #ffffff;
        --light-gray: #f5f5f5;
        --gradient-bg: linear-gradient(135deg, var(--light-orange) 0%, #ffffff 100%);
    }

    body {
        background-color: var(--light-gray);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
    }

    .blog-container {
        max-width: 900px;
        margin: 20px auto;
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(210, 105, 30, 0.15);
        padding: 15px;
        border-top: 5px solid var(--primary-orange);
    }

    .blog-header {
        border-bottom: 2px solid var(--light-orange);
        padding-bottom: 15px;
        margin-bottom: 20px;
        position: relative;
    }

        .blog-header:after {
            content: '';
            position: absolute;
            bottom: -2px;
            left: 0;
            width: 80px;
            height: 2px;
            background-color: var(--primary-orange);
        }

    .blog-title {
        font-size: 1.8rem;
        color: var(--dark-orange);
        font-weight: 700;
        margin-bottom: 10px;
        display: flex;
        align-items: center;
        flex-wrap: wrap;
    }

        .blog-title i {
            margin-right: 10px;
            color: var(--primary-orange);
        }

    .blog-info {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-bottom: 20px;
    }

    .info-item {
        display: flex;
        align-items: center;
        background-color: var(--light-orange);
        padding: 8px 12px;
        border-radius: 20px;
        transition: all 0.3s ease;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        font-size: 0.9rem;
    }

        .info-item:hover {
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            transform: translateY(-2px);
        }

    .info-label {
        font-weight: 600;
        color: var(--dark-orange);
        margin-right: 6px;
        display: flex;
        align-items: center;
    }

        .info-label i {
            margin-right: 6px;
        }

    .info-value {
        color: var(--text-dark);
    }

    .blog-description {
        font-size: 1rem;
        font-style: italic;
        color: #555;
        padding: 15px;
        background: var(--gradient-bg);
        border-radius: 8px;
        margin-bottom: 20px;
        box-shadow: 0 3px 10px rgba(0,0,0,0.05);
        position: relative;
        border-left: 3px solid var(--primary-orange);
    }

        .blog-description:before {
            content: '\f10d';
            font-family: 'Font Awesome 6 Free';
            font-weight: 900;
            position: absolute;
            top: 8px;
            left: 10px;
            font-size: 0.7rem;
            color: var(--primary-orange);
            opacity: 0.3;
        }

    .blog-content {
        line-height: 1.7;
        font-size: 1rem;
        color: var(--text-dark);
        margin-bottom: 20px;
        padding: 5px;
    }

    .content-placeholder {
        padding: 15px;
        background-color: var(--light-gray);
        border-radius: 6px;
        text-align: center;
        color: #777;
        font-style: italic;
        border: 1px dashed #ddd;
        font-size: 0.9rem;
    }

    /* Actions container */
    .actions-container {
        display: flex;
        gap: 10px;
        margin-top: 20px;
        flex-wrap: wrap;
        justify-content: center;
    }

    /* Button styles */
    .btn {
        padding: 10px 20px;
        border-radius: 25px;
        cursor: pointer;
        font-weight: 600;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border: none;
        box-shadow: 0 3px 6px rgba(0,0,0,0.1);
        font-size: 0.9rem;
    }

    .btn-primary {
        background-color: var(--primary-orange);
        color: var(--text-light);
    }

        .btn-primary:hover {
            background-color: var(--dark-orange);
            transform: translateY(-2px);
            box-shadow: 0 5px 10px rgba(0,0,0,0.15);
        }

    .btn-secondary {
        background-color: var(--light-gray);
        color: var(--text-dark);
    }

        .btn-secondary:hover {
            background-color: #e0e0e0;
            transform: translateY(-2px);
            box-shadow: 0 5px 10px rgba(0,0,0,0.1);
        }

    /* Tags */
    .tags-container {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
        margin: 15px 0;
    }

    .tag {
        background-color: var(--light-orange);
        color: var(--dark-orange);
        padding: 5px 12px;
        border-radius: 15px;
        font-size: 0.8rem;
        display: inline-flex;
        align-items: center;
        transition: all 0.3s ease;
    }

        .tag i {
            margin-right: 5px;
            font-size: 0.7rem;
        }

        .tag:hover {
            background-color: var(--secondary-orange);
            color: var(--text-light);
            transform: translateY(-2px);
        }

    /* Responsive Design for iPhone 5 (320px) and up */
    @@media (max-width: 576px) {
        .blog-container {
            margin: 10px;
            padding: 10px;
        }

        .blog-title {
            font-size: 1.5rem;
        }

        .blog-header {
            padding-bottom: 10px;
            margin-bottom: 15px;
        }

        .info-item {
            padding: 6px 10px;
            font-size: 0.85rem;
        }

        .blog-description {
            font-size: 0.9rem;
            padding: 10px;
        }

        .blog-content {
            font-size: 0.9rem;
        }

        .btn {
            padding: 8px 16px;
            font-size: 0.85rem;
        }

        .tag {
            padding: 4px 10px;
            font-size: 0.75rem;
        }
    }

    @@media (max-width: 320px) {
        .blog-container {
            margin: 5px;
            padding: 8px;
            border-radius: 8px;
        }

        .blog-title {
            font-size: 1.2rem;
        }

            .blog-title i {
                margin-right: 8px;
                font-size: 1rem;
            }

        .blog-header:after {
            width: 60px;
        }

        .info-item {
            padding: 5px 8px;
            font-size: 0.75rem;
            flex: 1 1 100%;
        }

        .info-label {
            margin-right: 4px;
        }

            .info-label i {
                margin-right: 4px;
                font-size: 0.8rem;
            }

        .blog-description {
            font-size: 0.85rem;
            padding: 8px;
            margin-bottom: 15px;
        }

        .blog-content {
            font-size: 0.85rem;
            padding: 0;
        }

        .content-placeholder {
            padding: 10px;
            font-size: 0.8rem;
        }

            .content-placeholder i {
                font-size: 1.5rem;
                margin-bottom: 10px;
            }

        .actions-container {
            gap: 8px;
            margin-top: 15px;
        }

        .btn {
            padding: 6px 12px;
            font-size: 0.8rem;
            border-radius: 20px;
        }

        .tags-container {
            gap: 6px;
            margin: 10px 0;
        }

        .tag {
            padding: 3px 8px;
            font-size: 0.7rem;
        }

            .tag i {
                margin-right: 4px;
                font-size: 0.6rem;
            }
    }
</style>

<div class="blog-container">
    <div class="blog-header">
        <h1 class="blog-title">
            <i class="fas fa-book-open"></i>
            @Model.Title
        </h1>
        <div class="blog-info">
            <div class="info-item">
                <span class="info-label">
                    <i class="far fa-calendar-alt"></i>
                    Created:
                </span>
                <span class="info-value">@Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")</span>
            </div>
            <div class="info-item">
                <span class="info-label">
                    <i class="far fa-user"></i>
                    Author:
                </span>
                <span class="info-value">@Model.User.Id.Substring(0, 8)...</span>
            </div>
        </div>
    </div>

    <div class="blog-description">
        <i class="fas fa-quote-left fa-sm" style="margin-right: 8px; opacity: 0.4;"></i>
        @Model.Description
        <i class="fas fa-quote-right fa-sm" style="margin-left: 8px; opacity: 0.4;"></i>
    </div>

    <div class="tags-container">
        <div class="tag"><i class="fas fa-tag"></i> Blog</div>
        <div class="tag"><i class="fas fa-tag"></i> Category</div>
        <div class="tag"><i class="fas fa-tag"></i> News</div>
    </div>

    <div class="blog-content">
        <!-- Blog content would go here -->
        <div class="content-placeholder">
            <i class="fas fa-pen-fancy fa-2x" style="margin-bottom: 15px; color: var(--primary-orange);"></i>
            <p>This is where the full blog content would be displayed. Currently, the model doesn't have a full content field.</p>
        </div>
    </div>

    <div class="actions-container">
        <a asp-action="Edit" asp-route-id="@Model?.BlogId" class="btn btn-primary">
            <i class="fas fa-edit"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
        <a asp-controller="Comments" asp-action="Create" asp-route-blogId="@Model?.BlogId" class="btn btn-primary">
            <i class="fas fa-comment"></i> Comment
        </a>
    </div>
</div>
@model WebApplication2.Models.Blog
@{
    ViewData["Title"] = "Blog Details";
}

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
    :root {
        --primary-orange: #FF7F24;
        --secondary-orange: #FFA07A;
        --light-orange: #FFE4C4;
        --dark-orange: #D2691E;
        --text-dark: #333333;
        --text-light: #ffffff;
        --light-gray: #f5f5f5;
        --accent-color: #45B8AC;
        --gradient-bg: linear-gradient(135deg, var(--light-orange) 0%, #ffffff 100%);
    }

    body {
        background-color: var(--light-gray);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
    }

    .blog-container {
        max-width: 900px;
        margin: 30px auto;
        background-color: #ffffff;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(210, 105, 30, 0.2);
        padding: 25px;
        border-top: 5px solid var(--primary-orange);
        position: relative;
        overflow: hidden;
    }

        .blog-container::before {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 150px;
            height: 150px;
            background: var(--light-orange);
            opacity: 0.3;
            border-radius: 0 0 0 100%;
            z-index: 0;
        }

    .blog-header {
        border-bottom: 2px solid var(--light-orange);
        padding-bottom: 20px;
        margin-bottom: 25px;
        position: relative;
        z-index: 1;
    }

        .blog-header:after {
            content: '';
            position: absolute;
            bottom: -2px;
            left: 0;
            width: 100px;
            height: 3px;
            background-color: var(--primary-orange);
            border-radius: 3px;
            transition: width 0.3s ease;
        }

    .blog-container:hover .blog-header:after {
        width: 150px;
    }

    .blog-title {
        font-size: 2.2rem;
        color: var(--dark-orange);
        font-weight: 700;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        flex-wrap: wrap;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.05);
        line-height: 1.3;
    }

        .blog-title i {
            margin-right: 12px;
            color: var(--primary-orange);
            transform: rotate(-5deg);
            transition: transform 0.3s ease;
        }

    .blog-container:hover .blog-title i {
        transform: rotate(0deg) scale(1.1);
    }

    .blog-meta {
        background-color: rgba(255, 245, 238, 0.7);
        border-radius: 12px;
        padding: 15px;
        margin-bottom: 20px;
        box-shadow: 0 3px 10px rgba(0,0,0,0.03);
        border-left: 4px solid var(--secondary-orange);
    }

    .blog-info {
        display: flex;
        flex-wrap: wrap;
        gap: 12px;
        margin-bottom: 0;
    }

    .info-item {
        display: flex;
        align-items: center;
        background-color: var(--light-orange);
        padding: 10px 16px;
        border-radius: 25px;
        transition: all 0.3s ease;
        box-shadow: 0 3px 8px rgba(0,0,0,0.07);
        font-size: 0.95rem;
    }

        .info-item:hover {
            box-shadow: 0 5px 12px rgba(0,0,0,0.12);
            transform: translateY(-3px);
            background-color: var(--secondary-orange);
            color: white;
        }

            .info-item:hover .info-label,
            .info-item:hover .info-value {
                color: white;
            }

    .info-label {
        font-weight: 600;
        color: var(--dark-orange);
        margin-right: 8px;
        display: flex;
        align-items: center;
        transition: all 0.3s ease;
    }

        .info-label i {
            margin-right: 8px;
            font-size: 1rem;
        }

    .info-value {
        color: var(--text-dark);
        transition: all 0.3s ease;
    }

    .blog-description {
        font-size: 1.1rem;
        font-style: italic;
        color: #555;
        padding: 20px;
        background: var(--gradient-bg);
        border-radius: 12px;
        margin-bottom: 25px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.07);
        position: relative;
        border-left: 4px solid var(--primary-orange);
        line-height: 1.7;
    }

        .blog-description:before {
            content: '\f10d';
            font-family: 'Font Awesome 6 Free';
            font-weight: 900;
            position: absolute;
            top: 12px;
            left: 15px;
            font-size: 1rem;
            color: var(--primary-orange);
            opacity: 0.3;
        }

        .blog-description:after {
            content: '\f10e';
            font-family: 'Font Awesome 6 Free';
            font-weight: 900;
            position: absolute;
            bottom: 12px;
            right: 15px;
            font-size: 1rem;
            color: var(--primary-orange);
            opacity: 0.3;
        }

    .tags-container {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin: 20px 0;
    }

    .tag {
        background-color: var(--light-orange);
        color: var(--dark-orange);
        padding: 8px 15px;
        border-radius: 20px;
        font-size: 0.9rem;
        display: inline-flex;
        align-items: center;
        transition: all 0.3s ease;
        cursor: pointer;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
    }

        .tag i {
            margin-right: 8px;
            transition: transform 0.3s ease;
        }

        .tag:hover {
            background-color: var(--secondary-orange);
            color: var(--text-light);
            transform: translateY(-3px);
            box-shadow: 0 5px 10px rgba(210, 105, 30, 0.2);
        }

            .tag:hover i {
                transform: rotate(15deg);
            }

    .blog-content {
        line-height: 1.8;
        font-size: 1.05rem;
        color: var(--text-dark);
        margin-bottom: 30px;
        padding: 5px;
        position: relative;
        z-index: 1;
    }

    .content-placeholder {
        padding: 25px;
        background-color: var(--light-gray);
        border-radius: 12px;
        text-align: center;
        color: #666;
        font-style: italic;
        border: 2px dashed #ddd;
        font-size: 1rem;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .content-placeholder:hover {
            border-color: var(--secondary-orange);
            background-color: rgba(255, 245, 238, 0.8);
        }

        .content-placeholder i {
            color: var(--primary-orange);
            margin-bottom: 15px;
            transition: transform 0.5s ease;
            display: block;
        }

        .content-placeholder:hover i {
            transform: scale(1.2) rotate(10deg);
        }

        .content-placeholder::before {
            content: '';
            position: absolute;
            top: -20px;
            left: -20px;
            width: 60px;
            height: 60px;
            background-color: var(--light-orange);
            border-radius: 50%;
            opacity: 0.2;
            z-index: -1;
        }

        .content-placeholder::after {
            content: '';
            position: absolute;
            bottom: -20px;
            right: -20px;
            width: 80px;
            height: 80px;
            background-color: var(--light-orange);
            border-radius: 50%;
            opacity: 0.2;
            z-index: -1;
        }

    .actions-container {
        display: flex;
        gap: 15px;
        margin-top: 30px;
        flex-wrap: wrap;
        justify-content: center;
        position: relative;
        z-index: 1;
    }

    .btn {
        padding: 12px 24px;
        border-radius: 30px;
        cursor: pointer;
        font-weight: 600;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border: none;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        font-size: 1rem;
        min-width: 140px;
    }

        .btn i {
            margin-right: 10px;
            transition: transform 0.3s ease;
        }

        .btn:hover i {
            transform: translateX(-3px);
        }

    .btn-primary {
        background-color: var(--primary-orange);
        color: var(--text-light);
    }

        .btn-primary:hover {
            background-color: var(--dark-orange);
            transform: translateY(-3px);
            box-shadow: 0 6px 15px rgba(210, 105, 30, 0.3);
        }

    .btn-secondary {
        background-color: var(--light-gray);
        color: var(--text-dark);
        border: 1px solid #ddd;
    }

        .btn-secondary:hover {
            background-color: #e6e6e6;
            transform: translateY(-3px);
            box-shadow: 0 6px 15px rgba(0,0,0,0.1);
        }

    .btn-accent {
        background-color: var(--accent-color);
        color: var(--text-light);
    }

        .btn-accent:hover {
            background-color: #3AA99E;
            transform: translateY(-3px);
            box-shadow: 0 6px 15px rgba(69, 184, 172, 0.3);
        }

    .author-info {
        display: flex;
        align-items: center;
        margin-top: 20px;
        padding: 15px;
        background-color: rgba(255, 245, 238, 0.7);
        border-radius: 12px;
        box-shadow: 0 3px 10px rgba(0,0,0,0.05);
    }

    .author-avatar {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background-color: var(--secondary-orange);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: bold;
        margin-right: 15px;
        box-shadow: 0 3px 6px rgba(0,0,0,0.1);
    }

    .author-details {
        flex: 1;
    }

    .author-name {
        font-weight: 600;
        color: var(--dark-orange);
        margin-bottom: 3px;
    }

    .author-role {
        font-size: 0.85rem;
        color: #777;
    }

    .social-sharing {
        display: flex;
        justify-content: center;
        gap: 12px;
        margin-top: 20px;
    }

    .social-btn {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.2rem;
        transition: all 0.3s ease;
        box-shadow: 0 3px 8px rgba(0,0,0,0.1);
    }

        .social-btn.facebook {
            background-color: #3b5998;
        }

        .social-btn.twitter {
            background-color: #1da1f2;
        }

        .social-btn.linkedin {
            background-color: #0077b5;
        }

        .social-btn:hover {
            transform: translateY(-3px) scale(1.1);
            box-shadow: 0 5px 12px rgba(0,0,0,0.15);
        }

    .reading-time {
        display: inline-flex;
        align-items: center;
        padding: 8px 15px;
        background-color: var(--light-orange);
        border-radius: 20px;
        font-size: 0.9rem;
        color: var(--dark-orange);
        margin-bottom: 15px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
    }

        .reading-time i {
            margin-right: 8px;
        }

    /* Responsive Design */
    @@media (max-width: 991px) { /* Tablet */
        .blog-container

    {
        max-width: 90%;
        margin: 20px auto;
        padding: 20px;
    }

    .blog-title {
        font-size: 2rem;
    }

    .info-item {
        flex: 1 1 calc(50% - 12px);
        padding: 8px 14px;
    }

    .blog-description {
        padding: 15px;
    }

    .btn {
        padding: 10px 20px;
        min-width: 130px;
    }

    .author-info {
        padding: 12px;
    }

    }

    @@media (max-width: 767px) { /* Mobile */
        .blog-container

    {
        max-width: 100%;
        margin: 15px;
        padding: 15px;
        border-radius: 12px;
    }

    .blog-title {
        font-size: 1.8rem;
    }

        .blog-title i {
            margin-right: 10px;
        }

    .blog-header {
        padding-bottom: 15px;
        margin-bottom: 20px;
    }

    .blog-meta {
        padding: 12px;
    }

    .blog-info {
        gap: 10px;
    }

    .info-item {
        flex: 1 1 100%;
        padding: 8px 12px;
        font-size: 0.9rem;
    }

    .blog-description {
        font-size: 1rem;
        padding: 15px;
        margin-bottom: 20px;
    }

    .tags-container {
        gap: 8px;
    }

    .tag {
        padding: 6px 12px;
        font-size: 0.85rem;
    }

    .blog-content {
        font-size: 1rem;
    }

    .content-placeholder {
        padding: 20px 15px;
    }

    .actions-container {
        flex-direction: column;
        gap: 10px;
    }

    .btn {
        padding: 10px 20px;
        font-size: 0.95rem;
        min-width: 100%;
    }

    .author-info {
        flex-direction: column;
        align-items: flex-start;
        padding: 10px;
    }

    .author-avatar {
        margin-bottom: 10px;
        margin-right: 0;
    }

    .social-btn {
        width: 35px;
        height: 35px;
        font-size: 1.1rem;
    }

    }

    @@media (max-width: 400px) { /* Small Mobile */
        .blog-container

    {
        margin: 10px;
        padding: 12px;
    }

    .blog-title {
        font-size: 1.6rem;
    }

    .reading-time {
        padding: 6px 12px;
        font-size: 0.85rem;
    }

    .info-item {
        padding: 6px 10px;
        font-size: 0.85rem;
    }

    .blog-description {
        font-size: 0.95rem;
        padding: 12px;
    }

    .tag {
        padding: 5px 10px;
        font-size: 0.8rem;
    }

    .content-placeholder {
        padding: 15px 10px;
        font-size: 0.9rem;
    }

    .btn {
        padding: 8px 16px;
        font-size: 0.9rem;
    }

    .author-avatar {
        width: 40px;
        height: 40px;
    }

    .author-name {
        font-size: 0.95rem;
    }

    .author-role {
        font-size: 0.8rem;
    }

    .social-btn {
        width: 30px;
        height: 30px;
        font-size: 1rem;
    }

    }
</style>

<div class="blog-container">
    <div class="blog-header">
        <h1 class="blog-title">
            <i class="fas fa-book-open"></i>
            @Model.Title
        </h1>

        <div class="reading-time">
            <i class="fas fa-clock"></i>
            <span>5 minutes read</span>
        </div>
    </div>

    <div class="blog-meta">
        <div class="blog-info">
            <div class="info-item">
                <span class="info-label">
                    <i class="far fa-calendar-alt"></i>
                    Posted on:
                </span>
                <span class="info-value">@Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")</span>
            </div>
            <div class="info-item">
                <span class="info-label">
                    <i class="far fa-eye"></i>
                    Views:
                </span>
                <span class="info-value">1,234</span>
            </div>
            <div class="info-item">
                <span class="info-label">
                    <i class="far fa-comment"></i>
                    Comments:
                </span>
                <span class="info-value">15</span>
            </div>
        </div>
    </div>

    <div class="author-info">
        <div class="author-avatar">
            <i class="fas fa-user"></i>
        </div>
        <div class="author-details">
            <div class="author-name">@Model.User.Id.Substring(0, 8)...</div>
            <div class="author-role">Author</div>
        </div>
    </div>

    <div class="blog-description">
        @Model.Description
    </div>

    <div class="tags-container">
        <div class="tag"><i class="fas fa-tag"></i> Blog</div>
        <div class="tag"><i class="fas fa-hashtag"></i> News</div>
        <div class="tag"><i class="fas fa-bookmark"></i> Technology</div>
        <div class="tag"><i class="fas fa-fire"></i> Trends</div>
    </div>

    <div class="blog-content">
        <div class="content-placeholder">
            <i class="fas fa-pen-fancy fa-2x"></i>
            <p>This is where the full content of the post will be displayed. Currently, the model does not have a full content field.</p>
            <p>When content is available, this section will display beautifully formatted text with images and other multimedia elements.</p>
        </div>
    </div>

    <div class="social-sharing">
        <a href="#" class="social-btn facebook">
            <i class="fab fa-facebook-f"></i>
        </a>
        <a href="#" class="social-btn twitter">
            <i class="fab fa-twitter"></i>
        </a>
        <a href="#" class="social-btn linkedin">
            <i class="fab fa-linkedin-in"></i>
        </a>
    </div>

    <div class="actions-container">
        <a asp-action="Edit" asp-route-id="@Model?.BlogId" class="btn btn-primary">
            <i class="fas fa-edit"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back
        </a>
        <a asp-controller="Comments" asp-action="Create" asp-route-blogId="@Model?.BlogId" class="btn btn-accent">
            <i class="far fa-comment-dots"></i> Comment
        </a>
    </div>
</div>
@model WebApplication2.Models.Blog
@{
    ViewData["Title"] = "Tạo Bài Viết Mới";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0" style="border-top: 4px solid #FF7F50;">
                <div class="card-header bg-soft-orange text-center py-4">
                    <h1 class="card-title text-dark mb-0" style="color: #FF7F50;">Tạo Bài Viết Mới</h1>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Title" class="form-label text-dark"></label>
                            <input asp-for="Title" class="form-control form-control-lg"
                                   style="border-color: #FF7F50; focus-border-color: #FF7F50;"
                                   placeholder="Nhập tiêu đề bài viết" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Description" class="form-label text-dark"></label>
                            <textarea asp-for="Description" class="form-control form-control-lg"
                                      style="border-color: #FF7F50; focus-border-color: #FF7F50;"
                                      rows="4"
                                      placeholder="Mô tả ngắn về bài viết"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary" style="background-color: #FF7F50; border-color: #FF7F50;">
                                <i class="fas fa-save me-2"></i>Tạo Bài Viết
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <style>
        .bg-soft-orange {
            background-color: rgba(255, 127, 80, 0.1);
        }

        .form-control:focus {
            border-color: #FF7F50;
            box-shadow: 0 0 0 0.2rem rgba(255, 127, 80, 0.25);
        }
    </style>
}
@model WebApplication2.Models.Blog
@{
    ViewData["Title"] = "Chỉnh Sửa Bài Viết";
}

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10 col-12">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-gradient text-center py-4">
                    <h1 class="card-title">
                        <i class="fa-solid fa-pen-fancy me-2 text-primary"></i> Edit Post
                    </h1>
                    <p class="text-muted mt-2 mb-0">
                        <i class="fa-solid fa-info-circle me-1"></i> Update your post details
                    </p>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" id="editBlogForm">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
                            <i class="fa-solid fa-triangle-exclamation me-2"></i> Please review the information below
                        </div>
                        <input type="hidden" asp-for="BlogId" />

                        <!-- Post Title -->
                        <div class="form-group floating-label mb-4">
                            <div class="input-icon-group">
                                <span class="input-icon"><i class="fa-solid fa-heading"></i></span>
                                <input asp-for="Title" class="form-control pl-40" placeholder=" " maxlength="100" />
                                <label asp-for="Title">Post Title</label>
                            </div>
                            <span asp-validation-for="Title" class="invalid-feedback"></span>
                            <div class="char-count">
                                <i class="fa-solid fa-text-width me-1"></i><span id="titleCount">0</span>/100
                            </div>
                        </div>

                        <!-- Post Description -->
                        <div class="form-group floating-label mb-4">
                            <div class="input-icon-group">
                                <span class="input-icon"><i class="fa-solid fa-align-left"></i></span>
                                <textarea asp-for="Description" class="form-control pl-40" rows="4" placeholder=" " maxlength="500"></textarea>
                                <label asp-for="Description">Post Description</label>
                            </div>
                            <span asp-validation-for="Description" class="invalid-feedback"></span>
                            <div class="char-count">
                                <i class="fa-solid fa-text-height me-1"></i><span id="descCount">0</span>/500
                            </div>
                        </div>

                        <!-- Creation Date -->
                        <div class="form-group mb-4">
                            <label asp-for="CreatedAt">
                                <i class="fa-solid fa-calendar-alt text-primary me-2"></i> Creation Date
                            </label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fa-solid fa-calendar-day"></i></span>
                                <input asp-for="CreatedAt" class="form-control" type="datetime-local" />
                            </div>
                            <span asp-validation-for="CreatedAt" class="invalid-feedback"></span>
                        </div>

                        <!-- Author -->
                        <div class="form-group mb-4">
                            <label asp-for="UserId">
                                <i class="fa-solid fa-user-edit text-primary me-2"></i> Author
                            </label>
                            <select asp-for="UserId" class="form-select" asp-items="ViewBag.UserId">
                                <option value="">Select User</option>
                            </select>
                            <span asp-validation-for="UserId" class="invalid-feedback"></span>
                        </div>

                        <!-- Action Buttons -->
                        <div class="form-action-buttons mt-5 d-flex justify-content-between flex-wrap">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fa-solid fa-arrow-left me-2"></i> Back
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fa-solid fa-floppy-disk me-2"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3">
                    <i class="fa-solid fa-lightbulb text-warning me-2"></i>
                    <span>Update post details to display for readers</span>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <style>
        :root {
            --primary-color: #FF7F50;
            --primary-light: rgba(255, 127, 80, 0.1);
            --primary-hover: #FF6B3D;
            --primary-darker: #E56B44;
            --primary-shadow: rgba(255, 127, 80, 0.25);
            --dark-text: #343a40;
            --light-bg: #f8f9fa;
            --input-border: #e0e6ed;
            --transition-time: 0.3s;
        }

        body {
            background-color: #f5f7fa;
            background-image: linear-gradient(135deg, #f5f7fa 0%, #f0f2f5 100%);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            padding: 0 15px;
        }

        .card {
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 15px 35px rgba(0,0,0,0.1);
            transition: all var(--transition-time) ease;
            border: none;
            border-top: 5px solid var(--primary-color);
            position: relative;
        }

            .card:hover {
                transform: translateY(-8px);
                box-shadow: 0 25px 40px rgba(0,0,0,0.15);
            }

        .card-header {
            background: linear-gradient(145deg, var(--primary-light) 0%, rgba(255, 245, 240, 0.6) 100%);
            border-bottom: 1px solid rgba(255, 127, 80, 0.2);
            padding: 1.5rem;
        }

            .card-header.bg-gradient::before {
                content: '';
                position: absolute;
                top: -50%;
                left: -50%;
                width: 200%;
                height: 200%;
                background: radial-gradient(circle, rgba(255,127,80,0.1) 0%, rgba(255,255,255,0) 70%);
                z-index: 0;
            }

        .card-title {
            color: var(--primary-color);
            font-weight: 700;
            margin: 0;
            font-size: 1.8rem;
            position: relative;
            z-index: 1;
        }

        .card-body {
            padding: 1.5rem;
        }

        .card-footer {
            border-top: 1px solid rgba(0,0,0,0.05);
            padding: 1rem;
        }

        .form-label {
            font-weight: 500;
            margin-bottom: 0.5rem;
            color: var(--dark-text);
            font-size: 0.95rem;
            transition: all 0.2s ease;
            display: flex;
            align-items: center;
        }

        .form-control, .form-select {
            border-radius: 10px;
            padding: 0.75rem 1rem;
            border: 2px solid var(--input-border);
            transition: all var(--transition-time) ease;
            font-size: 0.95rem;
            background-color: #ffffff;
            box-shadow: 0 2px 5px rgba(0,0,0,0.02);
        }

            .form-control.pl-40 {
                padding-left: 40px;
            }

            .form-control:focus, .form-select:focus {
                border-color: var(--primary-color);
                box-shadow: 0 0 0 0.25rem var(--primary-shadow);
                outline: none;
            }

        .input-group-text {
            border-radius: 10px 0 0 10px;
            background-color: var(--light-bg);
            border: 2px solid var(--input-border);
            border-right: none;
            color: var(--primary-color);
        }

        .btn {
            border-radius: 10px;
            padding: 0.75rem 1.5rem;
            font-weight: 500;
            transition: all var(--transition-time) ease;
            box-shadow: 0 3px 10px rgba(0,0,0,0.05);
            font-size: 0.95rem;
        }

            .btn::after {
                content: '';
                position: absolute;
                top: 50%;
                left: 50%;
                width: 0;
                height: 0;
                background: rgba(255,255,255,0.2);
                border-radius: 50%;
                transform: translate(-50%, -50%);
                transition: width 0.5s, height 0.5s;
            }

            .btn:active::after {
                width: 200%;
                height: 200%;
            }

        .btn-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
            color: white;
        }

            .btn-primary:hover, .btn-primary:focus {
                background-color: var(--primary-hover);
                border-color: var(--primary-hover);
                transform: translateY(-3px);
                box-shadow: 0 8px 15px rgba(255, 127, 80, 0.4);
            }

            .btn-primary:active {
                background-color: var(--primary-darker);
                transform: translateY(1px);
                box-shadow: 0 5px 10px rgba(255, 127, 80, 0.4);
            }

        .btn-outline-secondary {
            color: #6c757d;
            border-color: #6c757d;
            background-color: white;
        }

            .btn-outline-secondary:hover {
                background-color: #6c757d;
                color: white;
                transform: translateY(-3px);
                box-shadow: 0 8px 15px rgba(108, 117, 125, 0.3);
            }

            .btn-outline-secondary:active {
                transform: translateY(1px);
                box-shadow: 0 5px 10px rgba(108, 117, 125, 0.3);
            }

        .form-group {
            margin-bottom: 1.5rem;
            position: relative;
        }

        .invalid-feedback {
            position: absolute;
            right: 0;
            bottom: -1.2rem;
            font-size: 0.8rem;
            color: #dc3545;
            display: flex;
            align-items: center;
        }

            .invalid-feedback::before {
                content: "\f071";
                font-family: "Font Awesome 6 Free";
                font-weight: 900;
                margin-right: 5px;
            }

        .floating-label label {
            position: absolute;
            left: 40px;
            top: 0.75rem;
            transition: all 0.25s ease;
            pointer-events: none;
            color: #6c757d;
            background: white;
            padding: 0 0.3rem;
            z-index: 1;
        }

        .floating-label input:focus ~ label,
        .floating-label input:not(:placeholder-shown) ~ label,
        .floating-label textarea:focus ~ label,
        .floating-label textarea:not(:placeholder-shown) ~ label {
            top: -0.5rem;
            left: 0.8rem;
            font-size: 0.7rem;
            color: var(--primary-color);
            font-weight: 600;
        }

        textarea {
            min-height: 100px;
            resize: vertical;
        }

        .select-wrapper {
            position: relative;
        }

            .select-wrapper::after {
                content: "\f107";
                font-family: "Font Awesome 6 Free";
                font-weight: 900;
                position: absolute;
                right: 15px;
                top: 50%;
                transform: translateY(-50%);
                pointer-events: none;
                color: var(--primary-color);
                font-size: 1rem;
            }

            .select-wrapper:hover::after {
                transform: translateY(-50%) rotate(180deg);
            }

        .char-count {
            position: absolute;
            right: 8px;
            bottom: 8px;
            font-size: 0.7rem;
            color: #6c757d;
            background: rgba(255,255,255,0.9);
            padding: 0.2rem 0.5rem;
            border-radius: 15px;
            display: flex;
            align-items: center;
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        }

        .form-action-buttons {
            margin-top: 1.5rem;
            gap: 10px;
        }

        .input-icon {
            position: absolute;
            left: 0;
            top: 0;
            height: 100%;
            width: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--primary-color);
            z-index: 2;
        }

        .alert {
            border-radius: 8px;
            border-left: 4px solid #dc3545;
            display: flex;
            align-items: center;
        }

        .text-primary {
            color: var(--primary-color) !important;
        }

        .text-warning {
            color: #ffc107 !important;
        }

        /* Responsive Design */
        @@media (max-width: 991px) { /* Tablet */
            .container

        {
            max-width: 90%;
            margin-top: 3rem;
            margin-bottom: 3rem;
        }

        .card-header {
            padding: 1.25rem;
        }

        .card-title {
            font-size: 1.6rem;
        }

        .card-body {
            padding: 1.25rem;
        }

        .form-control, .form-select {
            padding: 0.7rem 0.9rem;
            font-size: 0.9rem;
        }

        .btn {
            padding: 0.7rem 1.3rem;
            font-size: 0.9rem;
        }

        .form-action-buttons {
            gap: 8px;
        }

        }

        @@media (max-width: 767px) { /* Mobile */
            .container

        {
            margin-top: 2rem;
            margin-bottom: 2rem;
        }

        .card {
            border-radius: 12px;
        }

        .card-header {
            padding: 1rem;
        }

        .card-title {
            font-size: 1.5rem;
        }

        .card-body {
            padding: 1rem;
        }

        .card-footer {
            padding: 0.8rem;
        }

        .form-label {
            font-size: 0.9rem;
        }

        .form-control, .form-select {
            padding: 0.65rem 0.85rem;
            font-size: 0.9rem;
        }

            .form-control.pl-40 {
                padding-left: 35px;
            }

        .input-icon {
            width: 35px;
            font-size: 0.9rem;
        }

        .btn {
            padding: 0.65rem 1.2rem;
            font-size: 0.9rem;
            width: 100%;
        }

        .form-action-buttons {
            flex-direction: column;
            gap: 10px;
        }

        .floating-label label {
            left: 35px;
            top: 0.65rem;
        }

        .floating-label input:focus ~ label,
        .floating-label input:not(:placeholder-shown) ~ label,
        .floating-label textarea:focus ~ label,
        .floating-label textarea:not(:placeholder-shown) ~ label {
            top: -0.45rem;
            left: 0.7rem;
            font-size: 0.65rem;
        }

        textarea {
            min-height: 90px;
        }

        .char-count {
            font-size: 0.65rem;
            right: 6px;
            bottom: 6px;
        }

        .invalid-feedback {
            bottom: -1.1rem;
            font-size: 0.75rem;
        }

        }

        @@media (max-width: 320px) { /* Small Mobile (e.g., iPhone 5) */
            .container

        {
            padding: 0 10px;
            margin-top: 1.5rem;
            margin-bottom: 1.5rem;
        }

        .card-header {
            padding: 0.8rem;
        }

        .card-title {
            font-size: 1.3rem;
        }

            .card-title i {
                font-size: 1rem;
                margin-right: 5px;
            }

        .card-body {
            padding: 0.8rem;
        }

        .card-footer {
            padding: 0.6rem;
            font-size: 0.85rem;
        }

        .form-label {
            font-size: 0.85rem;
        }

        .form-control, .form-select {
            padding: 0.5rem 0.75rem;
            font-size: 0.85rem;
        }

            .form-control.pl-40 {
                padding-left: 30px;
            }

        .input-icon {
            width: 30px;
            font-size: 0.85rem;
        }

        .btn {
            padding: 0.5rem 1rem;
            font-size: 0.85rem;
        }

        .floating-label label {
            left: 30px;
            top: 0.5rem;
        }

        .floating-label input:focus ~ label,
        .floating-label input:not(:placeholder-shown) ~ label,
        .floating-label textarea:focus ~ label,
        .floating-label textarea:not(:placeholder-shown) ~ label {
            top: -0.4rem;
            left: 0.6rem;
            font-size: 0.6rem;
        }

        textarea {
            min-height: 80px;
        }

        .char-count {
            right: 5px;
            bottom: 5px;
            font-size: 0.6rem;
            padding: 0.15rem 0.4rem;
        }

        .invalid-feedback {
            bottom: -1rem;
            font-size: 0.7rem;
        }

        .alert {
            font-size: 0.85rem;
            padding: 0.75rem;
        }

        }
    </style>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            function updateCharCount(fieldId) {
                const field = document.getElementById(fieldId);
                const counter = fieldId === 'Title' ?
                    document.getElementById('titleCount') :
                    document.getElementById('descCount');
                const charCountElement = counter.closest('.char-count');
                const maxLength = fieldId === 'Title' ? 100 : 500;
                const currentLength = field.value.length;

                counter.textContent = currentLength;

                if (currentLength > maxLength * 0.8) {
                    charCountElement.style.color = currentLength >= maxLength ? '#dc3545' : '#ff7f50';
                } else {
                    charCountElement.style.color = '#6c757d';
                }
            }

            let titleTimeout, descTimeout;

            document.getElementById('Title').addEventListener('input', function() {
                clearTimeout(titleTimeout);
                titleTimeout = setTimeout(() => updateCharCount('Title'), 100);
            });

            document.getElementById('Description').addEventListener('input', function() {
                clearTimeout(descTimeout);
                descTimeout = setTimeout(() => updateCharCount('Description'), 100);
            });

            updateCharCount('Title');
            updateCharCount('Description');

            const form = document.getElementById('editBlogForm');
            form.addEventListener('submit', function(e) {
                const invalidFields = form.querySelectorAll('.is-invalid');
                invalidFields.forEach(field => {
                    field.style.borderColor = '#dc3545';
                    field.style.boxShadow = '0 0 0 0.25rem rgba(220, 53, 69, 0.25)';
                });
            });
        });
    </script>
}
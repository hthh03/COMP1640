@model WebApplication2.Models.Blog
@{
    ViewData["Title"] = "Edit Blog";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h3 style="color: #ff7846;">
                        <i class="fa fa-book" style="color: #ff7846;"></i> Edit Blog
                    </h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="BlogId" />
                        <div class="mb-3">
                            <label class="form-label" style="color: #ff7846;">Blog Title</label>
                            <div class="input-group">
                                <span class="input-group-text" style="color: #ff7846;">H</span>
                                <input asp-for="Title" class="form-control" />
                            </div>
                            <div class="d-flex justify-content-between">
                                <span asp-validation-for="Title" class="text-danger"></span>
                                <small class="text-muted">0/100</small>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" style="color: #ff7846;">Blog Description</label>
                            <div class="input-group">
                                <span class="input-group-text" style="color: #ff7846;">≡</span>
                                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span asp-validation-for="Description" class="text-danger"></span>
                                <small class="text-muted">0/500</small>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" style="color: #ff7846;">Created At</label>
                            <input asp-for="CreatedAt" type="datetime-local" class="form-control"
                                   value="@Model.CreatedAt.ToUniversalTime().ToString("yyyy-MM-ddTHH:mm")" />
                            <span asp-validation-for="CreatedAt" class="text-danger"></span>
                        </div>
                        <input type="hidden" asp-for="UserId" />
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fa-solid fa-arrow-left me-2"></i> Back to List
                            </a>
                            <button type="submit" class="btn text-white" style="background-color: #ff7846;">
                                <i class="fa-solid fa-floppy-disk me-2"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
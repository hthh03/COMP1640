@model WebApplication2.Models.Blog
@{
    ViewData["Title"] = "Delete Blog";
}

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
    /* Main color variables */
    :root {
        --primary-color: rgb(255, 127, 80);
        --primary-hover: rgb(235, 107, 60);
        --primary-light: rgba(255, 127, 80, 0.2);
        --primary-border: rgba(255, 127, 80, 0.3);
        --neutral-bg: #f8f9fa;
        --text-dark: #343a40;
        --text-light: #ffffff;
        --border-color: #dee2e6;
        --warning-bg: rgba(255, 127, 80, 0.15);
        --warning-border: rgba(255, 127, 80, 0.3);
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: var(--neutral-bg);
        color: var(--text-dark);
        margin: 0;
        padding: 0;
    }

    .delete-container {
        max-width: 800px;
        margin: 20px auto;
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 6px 18px rgba(0, 0, 0, 0.1);
        padding: 20px;
        position: relative;
    }

    .delete-header {
        text-align: center;
        margin-bottom: 20px;
        position: relative;
        padding-bottom: 10px;
    }

        .delete-header:after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 60px;
            height: 3px;
            background-color: var(--primary-color);
            border-radius: 3px;
        }

    .page-title {
        font-size: 1.8rem;
        color: var(--primary-color);
        margin-bottom: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
    }

    .page-subtitle {
        font-size: 1.1rem;
        background-color: var(--warning-bg);
        border: 1px solid var(--warning-border);
        border-radius: 6px;
        padding: 10px 15px;
        margin: 15px 0;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
    }

    .alert-icon {
        color: var(--primary-color);
        font-size: 1.1em;
        transition: transform 0.3s ease;
    }

    .page-subtitle:hover .alert-icon {
        transform: scale(1.2) rotate(10deg);
    }

    .blog-info-container {
        background-color: #ffffff;
        border-radius: 6px;
        border: 1px solid var(--border-color);
        padding: 15px;
        margin-bottom: 20px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    .blog-info-header {
        display: flex;
        align-items: center;
        gap: 8px;
        margin-bottom: 10px;
        border-bottom: 1px solid var(--border-color);
        padding-bottom: 8px;
    }

        .blog-info-header h4 {
            margin: 0;
            font-size: 1.2rem;
            color: var(--primary-color);
        }

        .blog-info-header i {
            color: var(--primary-color);
        }

    .info-row {
        display: flex;
        border-bottom: 1px solid var(--border-color);
        margin-bottom: 10px;
        padding-bottom: 10px;
    }

        .info-row:last-child {
            border-bottom: none;
            margin-bottom: 0;
            padding-bottom: 0;
        }

    .info-label {
        flex: 0 0 120px;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 6px;
    }

        .info-label i {
            color: var(--primary-color);
            width: 16px;
            text-align: center;
        }

    .info-value {
        flex: 1;
        padding: 0 8px;
        word-wrap: break-word;
    }

    .actions-container {
        display: flex;
        justify-content: center;
        gap: 10px;
        margin-top: 20px;
        flex-wrap: wrap;
    }

    .btn {
        padding: 8px 20px;
        border-radius: 25px;
        cursor: pointer;
        font-weight: 600;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        border: none;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
    }

    .btn-danger {
        background-color: var(--primary-color);
        color: var(--text-light);
    }

        .btn-danger:hover {
            background-color: var(--primary-hover);
            transform: translateY(-2px);
            box-shadow: 0 5px 10px rgba(255, 127, 80, 0.4);
        }

    .btn-secondary {
        background-color: #6c757d;
        color: var(--text-light);
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            transform: translateY(-2px);
            box-shadow: 0 5px 10px rgba(108, 117, 125, 0.3);
        }

    /* Modal Popup Styles */
    .modal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 1000;
        justify-content: center;
        align-items: center;
        animation: fadeIn 0.3s ease-out forwards;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
    }

    to {
        opacity: 1;
    }

    }

    @@keyframes slideIn {
        from

    {
        transform: translateY(-50px);
        opacity: 0;
    }

    to {
        transform: translateY(0);
        opacity: 1;
    }

    }

    .modal-content {
        background-color: #fff;
        border-radius: 10px;
        width: 90%;
        max-width: 500px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
        animation: slideIn 0.3s ease-out forwards;
        position: relative;
        overflow: hidden;
    }

    .modal-header {
        background-color: var(--primary-light);
        padding: 15px 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
    }

    .modal-title {
        color: var(--primary-color);
        font-size: 1.3rem;
        font-weight: 600;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .modal-close {
        position: absolute;
        right: 15px;
        top: 15px;
        background: none;
        border: none;
        color: var(--primary-color);
        font-size: 1.2rem;
        cursor: pointer;
        transition: transform 0.2s ease;
    }

        .modal-close:hover {
            transform: scale(1.2);
        }

    .modal-body {
        padding: 20px;
    }

    .danger-zone-title {
        font-weight: 600;
        margin-bottom: 15px;
        color: var(--primary-color);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 6px;
        font-size: 1.1rem;
    }

    .animation-container {
        display: flex;
        justify-content: center;
        margin: 15px 0;
    }

    .trash-animation {
        font-size: 3rem;
        color: var(--primary-color);
        opacity: 0.8;
        transition: transform 0.4s ease, opacity 0.4s ease;
    }

    .modal-content:hover .trash-animation {
        transform: rotate(15deg) scale(1.1);
        opacity: 1;
    }

    .modal-warning {
        text-align: center;
        background-color: var(--warning-bg);
        border: 1px solid var(--warning-border);
        border-radius: 6px;
        padding: 10px;
        margin: 15px 0;
        font-weight: 500;
    }

    .modal-footer {
        display: flex;
        justify-content: center;
        gap: 15px;
        padding: 0 20px 20px;
    }

    /* Responsive Design for iPhone 5 (320px) and up */
    @@media (max-width: 576px) {
        .delete-container

    {
        margin: 10px;
        padding: 15px;
    }

    .page-title {
        font-size: 1.5rem;
        gap: 6px;
    }

    .page-subtitle {
        font-size: 0.95rem;
        padding: 8px 12px;
        margin: 10px 0;
    }

    .blog-info-container {
        padding: 10px;
    }

    .blog-info-header h4 {
        font-size: 1.1rem;
    }

    .info-label {
        flex: 0 0 100px;
        font-size: 0.9rem;
    }

    .info-value {
        font-size: 0.9rem;
    }

    .btn {
        padding: 7px 15px;
        font-size: 0.9rem;
    }

    .modal-title {
        font-size: 1.1rem;
    }

    .trash-animation {
        font-size: 2.5rem;
    }

    }

    @@media (max-width: 320px) {
        .delete-container

    {
        margin: 5px;
        padding: 10px;
        border-radius: 8px;
    }

    .page-title {
        font-size: 1.3rem;
        flex-wrap: wrap;
        gap: 4px;
    }

    .page-subtitle {
        font-size: 0.85rem;
        padding: 6px 10px;
        flex-wrap: wrap;
        text-align: center;
    }

    .blog-info-header h4 {
        font-size: 1rem;
    }

    .info-row {
        flex-direction: column;
        margin-bottom: 8px;
        padding-bottom: 8px;
    }

    .info-label {
        flex: none;
        width: 100%;
        margin-bottom: 4px;
        font-size: 0.85rem;
    }

    .info-value {
        padding: 0;
        font-size: 0.85rem;
    }

    .btn {
        padding: 6px 12px;
        font-size: 0.8rem;
        width: 100%;
    }

    .actions-container {
        flex-direction: column;
        gap: 8px;
    }

    .modal-body {
        padding: 15px;
    }

    .modal-title {
        font-size: 1rem;
    }

    .modal-close {
        font-size: 1rem;
    }

    .danger-zone-title {
        font-size: 0.95rem;
    }

    .trash-animation {
        font-size: 2rem;
    }

    .modal-footer {
        flex-direction: column;
        gap: 10px;
    }

        .modal-footer .btn {
            width: 100%;
        }

    }
</style>

<div class="delete-container">
    <div class="delete-header">
        <h1 class="page-title">
            <i class="fas fa-trash-alt"></i>
            Delete Blog
        </h1>
    </div>

    <h3 class="page-subtitle">
        <i class="fas fa-exclamation-triangle alert-icon"></i>
        Are you sure you want to delete this post?
    </h3>

    <div class="blog-info-container">
        <div class="blog-info-header">
            <i class="fas fa-info-circle fa-lg"></i>
            <h4>Blog Information</h4>
        </div>

        <div class="info-row">
            <div class="info-label">
                <i class="fas fa-heading"></i>
                @Html.DisplayNameFor(model => model.Title)
            </div>
            <div class="info-value">
                @Html.DisplayFor(model => model.Title)
            </div>
        </div>

        <div class="info-row">
            <div class="info-label">
                <i class="fas fa-align-left"></i>
                @Html.DisplayNameFor(model => model.Description)
            </div>
            <div class="info-value">
                @Html.DisplayFor(model => model.Description)
            </div>
        </div>

        <div class="info-row">
            <div class="info-label">
                <i class="far fa-calendar-alt"></i>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </div>
            <div class="info-value">
                @Html.DisplayFor(model => model.CreatedAt)
            </div>
        </div>

        <div class="info-row">
            <div class="info-label">
                <i class="far fa-user"></i>
                @Html.DisplayNameFor(model => model.User)
            </div>
            <div class="info-value">
                @Html.DisplayFor(model => model.User.Id)
            </div>
        </div>
    </div>

    <form asp-action="Delete" id="deleteForm">
        <input type="hidden" asp-for="BlogId" />
        <div class="actions-container">
            <button type="button" id="openConfirmationBtn" class="btn btn-danger">
                <i class="fas fa-trash-alt"></i>
                Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i>
                Back to List
            </a>
        </div>
    </form>
</div>

<!-- Confirmation Modal -->
<div id="confirmationModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h2 class="modal-title">
                <i class="fas fa-exclamation-triangle"></i>
                Delete Confirmation
            </h2>
            <button class="modal-close" id="closeModalBtn">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <div class="modal-body">
            <div class="danger-zone-title">
                <i class="fas fa-exclamation-circle"></i>
                Danger Zone
            </div>

            <div class="animation-container">
                <i class="fas fa-trash-alt trash-animation"></i>
            </div>

            <div class="modal-warning">
                <strong>Warning:</strong> This action cannot be undone. Data will be permanently deleted.
            </div>

            <p class="text-center">Are you absolutely sure you want to delete <strong>"@Model.Title"</strong>?</p>
        </div>
        <div class="modal-footer">
            <button type="button" id="confirmDeleteBtn" class="btn btn-danger">
                <i class="fas fa-trash-alt"></i>
                Yes, Delete It
            </button>
            <button type="button" id="cancelDeleteBtn" class="btn btn-secondary">
                <i class="fas fa-ban"></i>
                Cancel
            </button>
        </div>
    </div>
</div>

<script>
    // Get modal elements
    const modal = document.getElementById('confirmationModal');
    const openModalBtn = document.getElementById('openConfirmationBtn');
    const closeModalBtn = document.getElementById('closeModalBtn');
    const cancelBtn = document.getElementById('cancelDeleteBtn');
    const confirmBtn = document.getElementById('confirmDeleteBtn');
    const deleteForm = document.getElementById('deleteForm');

    // Open modal when Delete button is clicked
    openModalBtn.addEventListener('click', function() {
        modal.style.display = 'flex';
    });

    // Close modal when X button is clicked
    closeModalBtn.addEventListener('click', function() {
        modal.style.display = 'none';
    });

    // Close modal when Cancel button is clicked
    cancelBtn.addEventListener('click', function() {
        modal.style.display = 'none';
    });

    // Submit form when confirmation button is clicked
    confirmBtn.addEventListener('click', function() {
        deleteForm.submit();
    });

    // Close modal when clicking outside the modal content
    window.addEventListener('click', function(event) {
        if (event.target === modal) {
            modal.style.display = 'none';
        }
    });
</script>
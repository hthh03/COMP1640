@using LoginDemo.ViewModels;
@model RegisterViewModel;

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="account-container d-flex justify-content-center align-items-center min-vh-100">
    <div class="account-box shadow-lg p-5 rounded-4 bg-white" style="max-width: 400px; width: 100%;">
        <h2 class="text-center mb-4 fw-bold text-primary">Register</h2>
        <form asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3 text-center"></div>

            <!-- Name Field -->
            <div class="mb-4">
                <label asp-for="Name" class="form-label fw-medium text-dark">Full Name</label>
                <div class="input-group">
                    <span class="input-group-text bg-light"><i class="bi bi-person-fill"></i></span>
                    <input asp-for="Name" class="form-control shadow-sm" placeholder="Enter your full name" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Email Field -->
            <div class="mb-4">
                <label asp-for="Email" class="form-label fw-medium text-dark">Email</label>
                <div class="input-group">
                    <span class="input-group-text bg-light"><i class="bi bi-envelope-fill"></i></span>
                    <input asp-for="Email" class="form-control shadow-sm" placeholder="Enter your email" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Password Field -->
            <div class="mb-4">
                <label asp-for="Password" class="form-label fw-medium text-dark">Password</label>
                <div class="input-group">
                    <span class="input-group-text bg-light"><i class="bi bi-lock-fill"></i></span>
                    <input asp-for="Password" class="form-control shadow-sm" placeholder="Enter your password" />
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Confirm Password Field -->
            <div class="mb-4">
                <label asp-for="ConfirmPassword" class="form-label fw-medium text-dark">Confirm Password</label>
                <div class="input-group">
                    <span class="input-group-text bg-light"><i class="bi bi-lock-fill"></i></span>
                    <input asp-for="ConfirmPassword" class="form-control shadow-sm" placeholder="Confirm your password" />
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <!-- Role Selection -->
            <div class="mb-4">
                <label asp-for="Role" class="form-label fw-medium text-dark">Select Role</label>
                <div class="input-group">
                    <span class="input-group-text bg-light"><i class="bi bi-people-fill"></i></span>
                    <select asp-for="Role" class="form-select shadow-sm">
                        <option value="">-- Select Role --</option>
                        <option value="Student">Student</option>
                        <option value="Teacher">Teacher</option>
                    </select>
                </div>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>


            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary w-100 p-3 fw-bold rounded-pill shadow-sm">Register</button>

            <!-- Login Link -->
            <p class="text-center mt-4 text-dark">
                Already have an account?
                <a asp-controller="Account" asp-action="Login" class="text-decoration-none fw-medium text-primary">Login now</a>
            </p>

            <!-- Back Link -->
            <div class="text-center mt-3">
                <a asp-controller="Home" asp-action="Index" class="text-decoration-none text-muted">Back to Home</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}
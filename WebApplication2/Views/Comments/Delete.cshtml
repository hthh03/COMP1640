@model WebApplication2.Models.Comment

@{
    ViewData["Title"] = "Xóa bình luận";
}

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<!-- SweetAlert2 CDN -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<style>
    /* Main color variables */
    :root {
        --primary-orange: #FF7F24;
        --secondary-orange: #FFA07A;
        --light-orange: #FFE4C4;
        --dark-orange: #D2691E;
        --text-dark: #333333;
        --text-light: #ffffff;
        --light-gray: #f5f5f5;
        --danger-red: #dc3545;
        --danger-dark: #c82333;
    }

    body {
        background-color: var(--light-gray);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .delete-container {
        max-width: 800px;
        margin: 40px auto;
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(210, 105, 30, 0.15);
        padding: 30px;
        position: relative;
        border-top: 5px solid var(--danger-red);
    }

    .delete-header {
        text-align: center;
        margin-bottom: 30px;
        position: relative;
        padding-bottom: 15px;
    }

        .delete-header:after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 3px;
            background-color: var(--danger-red);
        }

    .delete-title {
        color: var(--danger-red);
        font-size: 2.2rem;
        font-weight: 700;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 15px;
    }

        .delete-title i {
            margin-right: 12px;
        }

    .delete-subtitle {
        color: var(--text-dark);
        font-size: 1.3rem;
        text-align: center;
        font-weight: 500;
    }

    .comment-info {
        background-color: var(--light-orange);
        border-radius: 12px;
        padding: 25px;
        margin-bottom: 30px;
        border-left: 4px solid var(--primary-orange);
    }

    .comment-header {
        font-size: 1.2rem;
        color: var(--dark-orange);
        font-weight: 600;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
    }

        .comment-header i {
            margin-right: 10px;
        }

    .info-row {
        display: flex;
        margin-bottom: 15px;
        border-bottom: 1px solid rgba(210, 105, 30, 0.2);
        padding-bottom: 12px;
    }

        .info-row:last-child {
            border-bottom: none;
            margin-bottom: 0;
            padding-bottom: 0;
        }

    .info-label {
        flex: 0 0 25%;
        font-weight: 600;
        color: var(--dark-orange);
        display: flex;
        align-items: center;
    }

        .info-label i {
            margin-right: 8px;
            width棒棒糖width: 20px;
            text-align: center;
        }

    .info-value {
        flex: 0 0 75%;
        color: var(--text-dark);
    }

    .comment-content {
        background-color: #f8f8f8;
        padding: 15px;
        border-radius: 8px;
        margin-top: 5px;
        margin-bottom: 10px;
        border-left: 3px solid var(--secondary-orange);
        font-style: italic;
    }

    .actions-container {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 30px;
    }

    .btn {
        padding: 12px 25px;
        border-radius: 50px;
        cursor: pointer;
        font-weight: 600;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border: none;
        box-shadow: 0 3px 6px rgba(0,0,0,0.1);
    }

    .btn-danger {
        background-color: var(--danger-red);
        color: var(--text-light);
    }

        .btn-danger:hover {
            background-color: var(--danger-dark);
            transform: translateY(-2px);
            box-shadow: 0 5px 10px rgba(0,0,0,0.15);
        }

    .btn-secondary {
        background-color: var(--light-gray);
        color: var(--text-dark);
    }

        .btn-secondary:hover {
            background-color: #e0e0e0;
            transform: translateY(-2px);
            box-shadow: 0 5px 10px rgba(0,0,0,0.1);
        }

    /* Warning alert */
    .warning-alert {
        background-color: rgba(220, 53, 69, 0.1);
        border: 1px solid rgba(220, 53, 69, 0.3);
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 25px;
        display: flex;
        align-items: flex-start;
    }

    .warning-icon {
        color: var(--danger-red);
        font-size: 1.5rem;
        margin-right: 15px;
        margin-top: 2px;
    }

    .warning-content {
        flex: 1;
    }

    .warning-title {
        color: var(--danger-red);
        font-weight: 600;
        margin-bottom: 5px;
    }

    .warning-message {
        color: var(--text-dark);
        font-size: 0.95rem;
    }

    /* Animation */
    @@keyframes pulse {
        0% {
            box-shadow: 0 0 0 0 rgba(220, 53, 69, 0.4);
        }

        70% {
            box-shadow: 0 0 0 10px rgba(220, 53, 69, 0);
        }

        100% {
            box-shadow: 0 0 0 0 rgba(220, 53, 69, 0);
        }
    }

    .btn-danger {
        animation: pulse 2s infinite;
    }

    /* Responsive styles */
    @@media (max-width: 768px) {
        .delete-container {
            margin: 20px;
            padding: 20px;
        }

        .info-row {
            flex-direction: column;
        }

        .info-label, .info-value {
            flex: 0 0 100%;
        }

        .info-label {
            margin-bottom: 5px;
        }

        .actions-container {
            flex-direction: column;
        }

        .btn {
            width: 100%;
        }
    }
</style>

<div class="delete-container">
    <div class="delete-header">
        <h1 class="delete-title">
            <i class="fas fa-trash-alt"></i> Xóa bình luận
        </h1>
        <h3 class="delete-subtitle">Bạn có chắc chắn muốn xóa bình luận này?</h3>
    </div>

    <div class="warning-alert">
        <div class="warning-icon">
            <i class="fas fa-exclamation-triangle"></i>
        </div>
        <div class="warning-content">
            <div class="warning-title">Cảnh báo!</div>
            <div class="warning-message">
                Hành động này không thể hoàn tác. Bình luận sẽ bị xóa vĩnh viễn khỏi hệ thống.
            </div>
        </div>
    </div>

    <div class="comment-info">
        <h4 class="comment-header">
            <i class="far fa-comment"></i> Thông tin bình luận
        </h4>

        <div class="info-row">
            <div class="info-label">
                <i class="fas fa-align-left"></i> Nội dung
            </div>
            <div class="info-value">
                <div class="comment-content">@Html.DisplayFor(model => model.Content)</div>
            </div>
        </div>

        <div class="info-row">
            <div class="info-label">
                <i class="far fa-calendar-alt"></i> Ngày tạo
            </div>
            <div class="info-value">
                @Html.DisplayFor(model => model.CreatedAt)
            </div>
        </div>

        <div class="info-row">
            <div class="info-label">
                <i class="far fa-clock"></i> Cập nhật lúc
            </div>
            <div class="info-value">
                @Html.DisplayFor(model => model.UpdatedAt)
            </div>
        </div>

        <div class="info-row">
            <div class="info-label">
                <i class="far fa-file-alt"></i> Bài viết
            </div>
            <div class="info-value">
                @Html.DisplayFor(model => model.Post.Content)
            </div>
        </div>

        <div class="info-row">
            <div class="info-label">
                <i class="far fa-user"></i> Người dùng
            </div>
            <div class="info-value">
                @Html.DisplayFor(model => model.User.Id)
            </div>
        </div>
    </div>

    <form asp-action="Delete" id="deleteForm">
        <input type="hidden" asp-for="CommentId" />
        <div class="actions-container">
            <button type="button" class="btn btn-danger" onclick="confirmDelete()">
                <i class="fas fa-trash-alt"></i> Xóa
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại danh sách
            </a>
        </div>
    </form>
</div>

<script>
    function confirmDelete() {
        Swal.fire({
            title: 'Bạn có chắc chắn?',
            text: "Bình luận này sẽ bị xóa vĩnh viễn và không thể khôi phục!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#dc3545',
            cancelButtonColor: '#6c757d',
            confirmButtonText: '<i class="fas fa-trash-alt"></i> Xóa',
            cancelButtonText: '<i class="fas fa-times"></i> Hủy',
            reverseButtons: true
        }).then((result) => {
            if (result.isConfirmed) {
                document.getElementById('deleteForm').submit();
            }
        });
    }
</script>
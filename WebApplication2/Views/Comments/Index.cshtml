@model IEnumerable<WebApplication2.Models.Comment>

@{
    ViewData["Title"] = "Danh sách bình luận";
}

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
    :root {
        --primary-orange: #FF7F24;
        --secondary-orange: #FFA07A;
        --light-orange: #FFE4C4;
        --dark-orange: #D2691E;
        --text-dark: #333333;
        --text-light: #ffffff;
        --light-gray: #f5f5f5;
        --accent-color: #45B8AC;
        --gradient-bg: linear-gradient(135deg, var(--light-orange) 0%, #ffffff 100%);
    }

    body {
        background-color: var(--light-gray);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
    }

    .comments-container {
        max-width: 1000px;
        margin: 20px auto;
        background-color: #ffffff;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(210, 105, 30, 0.2);
        padding: 20px;
        border-top: 5px solid var(--primary-orange);
        position: relative;
        overflow: hidden;
    }

        .comments-container::before {
            content: "";
            position: absolute;
            top: 0;
            right: 0;
            width: 150px;
            height: 150px;
            background: var(--light-orange);
            opacity: 0.15;
            border-radius: 0 0 0 100%;
            z-index: 0;
        }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
        position: relative;
        z-index: 1;
        flex-wrap: wrap;
        gap: 15px;
    }

    .page-title {
        font-size: 2rem;
        color: var(--dark-orange);
        font-weight: 700;
        display: flex;
        align-items: center;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.05);
        margin: 0;
    }

        .page-title i {
            margin-right: 15px;
            color: var(--primary-orange);
            font-size: 1.8rem;
        }

    .create-btn {
        padding: 10px 20px;
        background-color: var(--primary-orange);
        color: var(--text-light);
        border-radius: 30px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 4px 10px rgba(210, 105, 30, 0.3);
    }

        .create-btn i {
            margin-right: 10px;
        }

        .create-btn:hover {
            background-color: var(--dark-orange);
            transform: translateY(-3px);
            box-shadow: 0 6px 15px rgba(210, 105, 30, 0.4);
        }

    .stats-bar {
        display: flex;
        gap: 15px;
        margin-bottom: 25px;
        flex-wrap: wrap;
    }

    .stat-card {
        background: var(--gradient-bg);
        border-radius: 12px;
        padding: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        flex: 1;
        min-width: 120px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
        border-bottom: 3px solid var(--primary-orange);
    }

        .stat-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(210, 105, 30, 0.15);
        }

    .stat-icon {
        font-size: 1.8rem;
        color: var(--primary-orange);
        margin-bottom: 8px;
    }

    .stat-value {
        font-size: 1.6rem;
        font-weight: 700;
        color: var(--dark-orange);
    }

    .stat-label {
        font-size: 0.85rem;
        color: #777;
        margin-top: 5px;
        text-align: center;
    }

    .table-responsive {
        overflow-x: auto;
        margin-bottom: 20px;
        border-radius: 12px;
    }

    .comments-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        border-radius: 12px;
        overflow: hidden;
    }

        .comments-table thead {
            background-color: var(--primary-orange);
            color: var(--text-light);
        }

        .comments-table th {
            padding: 15px;
            text-align: left;
            font-weight: 600;
            font-size: 1rem;
            position: relative;
            transition: all 0.3s ease;
            white-space: nowrap;
        }

            .comments-table th i {
                margin-right: 8px;
                opacity: 0.8;
            }

        .comments-table tbody tr {
            background-color: #ffffff;
            transition: all 0.3s ease;
            border-bottom: 1px solid #f0f0f0;
        }

            .comments-table tbody tr:last-child {
                border-bottom: none;
            }

            .comments-table tbody tr:hover {
                background-color: rgba(255, 228, 196, 0.3);
                transform: translateY(-2px);
                box-shadow: 0 3px 8px rgba(0, 0, 0, 0.05);
            }

        .comments-table td {
            padding: 15px;
            color: var(--text-dark);
            vertical-align: middle;
            position: relative;
        }

    .comment-content {
        position: relative;
        padding-left: 15px;
        display: flex;
        align-items: center;
        min-width: 100px;
    }

        .comment-content::before {
            content: "";
            position: absolute;
            left: 0;
            top: 50%;
            transform: translateY(-50%);
            height: 70%;
            width: 3px;
            background-color: var(--primary-orange);
            border-radius: 3px;
        }

    .date-cell {
        display: flex;
        flex-direction: column;
        min-width: 100px;
    }

    .date-primary {
        font-weight: 600;
        color: var(--dark-orange);
        margin-bottom: 3px;
    }

    .date-secondary {
        font-size: 0.85rem;
        color: #777;
    }

    .user-cell {
        display: flex;
        align-items: center;
        min-width: 80px;
    }

    .user-avatar {
        width: 35px;
        height: 35px;
        border-radius: 50%;
        background-color: var(--secondary-orange);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: bold;
        margin-right: 10px;
        font-size: 0.8rem;
    }

    .user-id {
        font-weight: 600;
        color: var(--dark-orange);
        font-size: 0.95rem;
    }

    .post-reference {
        display: inline-block;
        max-width: 200px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        background-color: var(--light-orange);
        padding: 5px 10px;
        border-radius: 15px;
        font-size: 0.85rem;
        color: var(--dark-orange);
        transition: all 0.3s ease;
    }

        .post-reference:hover {
            background-color: var(--secondary-orange);
            color: var(--text-light);
        }

    .action-cell {
        display: flex;
        gap: 8px;
        min-width: 100px;
    }

    .action-btn {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
        color: white;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
        text-decoration: none;
    }

    .edit-btn {
        background-color: var(--primary-orange);
    }

    .details-btn {
        background-color: var(--accent-color);
    }

    .delete-btn {
        background-color: #FF6B6B;
    }

    .action-btn:hover {
        transform: translateY(-3px) scale(1.1);
        box-shadow: 0 5px 10px rgba(0, 0, 0, 0.15);
    }

    .pagination {
        display: flex;
        justify-content: center;
        margin-top: 30px;
        gap: 8px;
        flex-wrap: wrap;
    }

    .pagination-item {
        width: 36px;
        height: 36px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        background-color: white;
        color: var(--dark-orange);
        font-weight: 600;
        box-shadow: 0 3px 8px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        text-decoration: none;
    }

        .pagination-item.active {
            background-color: var(--primary-orange);
            color: var(--text-light);
        }

        .pagination-item:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 10px rgba(0, 0, 0, 0.15);
        }

    .pagination-arrow {
        background-color: var(--light-orange);
    }

    .no-data {
        color: #999;
        font-style: italic;
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .empty-state {
        text-align: center;
        padding: 40px 20px;
        background-color: #f9f9f9;
        border-radius: 12px;
        margin: 20px 0;
    }

    .empty-icon {
        font-size: 3rem;
        color: var(--secondary-orange);
        margin-bottom: 15px;
        opacity: 0.7;
    }

    .empty-text {
        font-size: 1.1rem;
        color: #777;
        margin-bottom: 20px;
    }

    .table-responsive::-webkit-scrollbar {
        height: 8px;
    }

    .table-responsive::-webkit-scrollbar-track {
        background: #f1f1f1;
        border-radius: 10px;
    }

    .table-responsive::-webkit-scrollbar-thumb {
        background: var(--secondary-orange);
        border-radius: 10px;
    }

        .table-responsive::-webkit-scrollbar-thumb:hover {
            background: var(--primary-orange);
        }


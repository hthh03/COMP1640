<div class="comments-container">
    <div class="page-header">
        <h1 class="page-title">
            <i class="far fa-comments"></i>
            Comments List
        </h1>
        <a asp-action="Create" class="create-btn">
            <i class="fas fa-plus-circle"></i> Add New
        </a>
    </div>

    <div class="stats-bar">
        <div class="stat-card">
            <div class="stat-icon">
                <i class="far fa-comment"></i>
            </div>
            <div class="stat-value">@Model.Count()</div>
            <div class="stat-label">Total Comments</div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">
                <i class="far fa-user"></i>
            </div>
            <div class="stat-value">@Model.Select(c => c.User.Id).Distinct().Count()</div>
            <div class="stat-label">Commenters</div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">
                <i class="far fa-calendar-alt"></i>
            </div>
            <div class="stat-value">@(Model.Any() ? Model.Max(c => c.CreatedAt).ToString("MM/dd") : "-")</div>
            <div class="stat-label">Latest Comment</div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="empty-state">
            <div class="empty-icon">
                <i class="far fa-comment-dots"></i>
            </div>
            <div class="empty-text">No comments have been created yet</div>
            <a asp-action="Create" class="create-btn">
                <i class="fas fa-plus-circle"></i> Create First Comment
            </a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="comments-table">
                <thead>
                    <tr>
                        <th><i class="fas fa-pen-fancy"></i> Content</th>
                        <th><i class="far fa-calendar-plus"></i> Created</th>
                        <th><i class="far fa-calendar-check"></i> Updated</th>
                        <th><i class="far fa-file-alt"></i> Post</th>
                        <th><i class="far fa-user"></i> User</th>
                        <th><i class="fas fa-cogs"></i> Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="comment-content">
                                    @if (item.Content != null && item.Content.Length > 50)
                                    {
                                        @(item.Content.Substring(0, 50) + "...")
                                    }
                                    else
                                    {
                                        @(item.Content ?? "")
                                    }
                                </div>
                            </td>
                            <td>
                                <div class="date-cell">
                                    <span class="date-primary">@item.CreatedAt.ToString("MM/dd/yyyy")</span>
                                    <span class="date-secondary">@item.CreatedAt.ToString("HH:mm")</span>
                                </div>
                            </td>
                            <td>
                                <div class="date-cell">
                                    @if (item.UpdatedAt.HasValue)
                                    {
                                        <span class="date-primary">@item.UpdatedAt.Value.ToString("MM/dd/yyyy")</span>
                                        <span class="date-secondary">@item.UpdatedAt.Value.ToString("HH:mm")</span>
                                    }
                                    else
                                    {
                                        <span class="no-data"><i class="fas fa-minus"></i> Not updated</span>
                                    }
                                </div>
                            </td>
                            <td>
                                <span class="post-reference" title="@(item.Post?.Content ?? "")">
                                    <i class="far fa-file-alt"></i>
                                    @if (item.Post != null && item.Post.Content != null && item.Post.Content.Length > 20)
                                    {
                                        @(item.Post.Content.Substring(0, 20) + "...")
                                    }
                                    else
                                    {
                                        @(item.Post?.Content ?? "")
                                    }
                                </span>
                            </td>
                            <td>
                                <div class="user-cell">
                                    <div class="user-avatar">
                                        <i class="far fa-user"></i>
                                    </div>
                                    @if (item.User != null && item.User.Id != null && item.User.Id.Length > 10)
                                    {
                                        <span class="user-id">@item.User.FullName.Substring(0, 10)...</span>
                                    }
                                    else
                                    {
                                        <span class="user-id">@(item.User?.Id ?? "Unknown")</span>
                                    }
                                </div>
                            </td>
                            <td>
                                <div class="action-cell">
                                    <a asp-action="Edit" asp-route-id="@item.CommentId" class="action-btn edit-btn" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.CommentId" class="action-btn details-btn" title="Details">
                                        <i class="fas fa-info"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.CommentId" class="action-btn delete-btn" title="Delete">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="pagination">
            <a href="#" class="pagination-item pagination-arrow">
                <i class="fas fa-chevron-left"></i>
            </a>
            <a href="#" class="pagination-item active">1</a>
            <a href="#" class="pagination-item">2</a>
            <a href="#" class="pagination-item">3</a>
            <a href="#" class="pagination-item pagination-arrow">
                <i class="fas fa-chevron-right"></i>
            </a>
        </div>
    }
</div>
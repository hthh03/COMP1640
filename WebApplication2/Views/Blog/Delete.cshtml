@model WebApplication2.Models.Blog

@{
    ViewData["Title"] = "Xóa Blog";
}

<div class="container mt-4">
    <h2>Xóa Blog</h2>
    <h3 class="text-danger">Bạn có chắc chắn muốn xóa blog này?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Tiêu đề</dt>
            <dd class="col-sm-10">@Model.Title</dd>

            <dt class="col-sm-2">Mô tả</dt>
            <dd class="col-sm-10">@Model.Description</dd>

            <dt class="col-sm-2">Ngày tạo</dt>
            <dd class="col-sm-10">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>
        </dl>

        <div class="alert alert-warning">
            <strong>Chú ý:</strong> Tất cả bài viết và bình luận trong blog này sẽ bị xóa.
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="BlogId" />
            <input type="submit" value="Xóa" class="btn btn-danger" />
            <a asp-action="Details" asp-route-id="@Model.BlogId" class="btn btn-secondary">Quay lại</a>
        </form>
    </div>
</div>
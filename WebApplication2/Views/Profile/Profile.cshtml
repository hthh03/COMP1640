@model WebApplication2.Models.Users

<div class="container">
    <h2>Hồ sơ cá nhân</h2>

    <div class="row">
        <div class="col-md-4">
            <div class="text-center mb-4">
                @if (!string.IsNullOrEmpty(Model.ProfileImage))
                {
                    <img src="@Url.Content(Model.ProfileImage)" class="img-thumbnail" style="max-width: 200px;" alt="Profile Image" />
                }
                else
                {
                    <img src="~/images/default-profile.png" class="img-thumbnail" style="max-width: 200px;" alt="Default Profile" />
                }
            </div>
        </div>

        <div class="col-md-8">
            <form asp-action="Profile" enctype="multipart/form-data" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Email" class="control-label">Email</label>
                    <input asp-for="Email" class="form-control" disabled />
                </div>

                <div class="form-group">
                    <label asp-for="FullName" class="control-label">Họ và tên</label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="ProfileImageFile" class="control-label">Ảnh đại diện</label>
                    <input type="file" id="ProfileImageFile" name="ProfileImageFile" class="form-control" accept="image/*" />
                </div>

                <div class="form-group mt-3">
                    <input type="submit" value="Cập nhật" class="btn btn-primary" />
                </div>

                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-success mt-3">
                        @ViewBag.Message
                    </div>
                }
            </form>
        </div>
    </div>
</div>